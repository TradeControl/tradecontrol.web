{
  "env": { "browser": true, "es6": false },
  "parserOptions": { "ecmaVersion": 5 },
  "rules": {
    "brace-style": ["error", "allman", { "allowSingleLine": false }],
    "curly": ["error", "all"],                             // always use braces
    "max-statements-per-line": ["error", { "max": 1 }],    // no a; b; on one line
    "nonblock-statement-body-position": ["error", "below"],// body on next line
    "one-var": ["error", "never"],
    "no-mixed-spaces-and-tabs": "error",
    "no-trailing-spaces": "error",
    "quotes": ["error", "double", { "avoidEscape": true }],
    "semi": ["error", "always"]
  }
}