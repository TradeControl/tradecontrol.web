{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [ "ES2020", "DOM" ],
        "types": [ "node", "playwright" ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
        "lib/**/*.ts",
        "tests/**/*.ts",
        "playwright.config.ts"
    ]
}
