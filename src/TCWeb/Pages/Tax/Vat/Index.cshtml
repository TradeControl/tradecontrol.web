@page
@inject Wangkanai.Detection.Services.IDetectionService Detection
@using Wangkanai.Detection.Models
@model TradeControl.Web.Pages.Tax.Vat.IndexModel

@{
    ViewData["Title"] = "Vat Totals";
    var btnWidthClass = (Detection?.Device?.Type == Device.Mobile) ? "w-100" : "w-25";
}

<h1>@ViewData["Title"]</h1>

<div class="row g-2 mb-3">
    <div class="col-12 col-sm-3 d-flex">
        <a asp-page="./Statement"
           class="btn btn-outline-info w-100 d-flex align-items-center justify-content-center"
           title="View statement">
            <i class="bi bi-list me-1" aria-hidden="true"></i>
            <span class="text-truncate">Statement</span>
        </a>
    </div>

    <div class="col-12 col-sm-3 d-flex">
        <a asp-page="./Periods/Index"
           class="btn btn-outline-info w-100 d-flex align-items-center justify-content-center"
           title="Monthly details">
            <i class="bi bi-calendar me-1" aria-hidden="true"></i>
            <span class="text-truncate">Monthly Details</span>
        </a>
    </div>

    @if (User.IsInRole(Constants.AdministratorsRole))
    {
        <div class="col-12 col-sm-3 d-flex">
            <a asp-page="/Tax/TaxCode/Index" asp-route-taxTypeCode="1"
               class="btn btn-outline-primary w-100 d-flex align-items-center justify-content-center"
               title="Tax rates">
                <i class="bi bi-percent me-1" aria-hidden="true"></i>
                <span class="text-truncate">Tax Rates</span>
            </a>
        </div>
    }

    <div class="col-12 col-sm-3 d-flex">
        <form method="get" class="w-100 d-flex align-items-center justify-content-center">
            <!-- reset to first page when changing page size -->
            <input type="hidden" name="PageNumber" value="1" />
            <select asp-for="PageSize"
                    asp-items="Model.PageSizeOptions"
                    class="form-control w-50"
                    aria-label="Rows per page"
                    onchange="this.form.submit()">
            </select>
            <noscript>
                <button type="submit" class="btn btn-sm btn-outline-secondary ms-2">Apply</button>
            </noscript>
        </form>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Cash_VatTotals[0].Description)</th>
            <th>@Html.DisplayNameFor(model => model.Cash_VatTotals[0].Period)</th>
            <th>@Html.DisplayNameFor(model => model.Cash_VatTotals[0].VatDue)</th>

            @if (Detection?.Device?.Type != Device.Mobile)
            {
                <th>@Html.DisplayNameFor(model => model.Cash_VatTotals[0].VatAdjustment)</th>
                <th>@Html.DisplayNameFor(model => model.Cash_VatTotals[0].HomeSalesVat)</th>
                <th>@Html.DisplayNameFor(model => model.Cash_VatTotals[0].ExportSalesVat)</th>
                <th>@Html.DisplayNameFor(model => model.Cash_VatTotals[0].HomePurchasesVat)</th>
                <th>@Html.DisplayNameFor(model => model.Cash_VatTotals[0].ExportPurchasesVat)</th>
            }

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cash_VatTotals)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Period)</td>
                <td>@Html.DisplayFor(modelItem => item.VatDue)</td>

                @if (Detection?.Device?.Type != Device.Mobile)
                {
                    <td>@Html.DisplayFor(modelItem => item.VatAdjustment)</td>
                    <td>@Html.DisplayFor(modelItem => item.HomeSalesVat)</td>
                    <td>@Html.DisplayFor(modelItem => item.ExportSalesVat)</td>
                    <td>@Html.DisplayFor(modelItem => item.HomePurchasesVat)</td>
                    <td>@Html.DisplayFor(modelItem => item.ExportPurchasesVat)</td>
                }

                <td>
                    <div class="action-buttons">
                        <a class="btn btn-info" asp-page="./Details" asp-route-startOn="@item.StartOn.ToLongDateString()" title="Details">
                            <i class="bi bi-info-circle" aria-hidden="true"></i>
                            <span class="visually-hidden">Details</span>
                        </a>
                        @if (User.IsInRole(Constants.AdministratorsRole) || User.IsInRole(Constants.ManagersRole))
                        {
                            <a asp-page="./Adjustment" asp-route-startOn="@item.StartOn.ToLongDateString()" class="btn btn-warning" title="Adjust totals">
                                <i class="bi bi-exclamation-triangle" aria-hidden="true"></i>
                                <span class="visually-hidden">Adjustment</span>
                            </a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination">
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" asp-page="./Index"
                   asp-route-PageSize="@Model.PageSize"
                   asp-route-PageNumber="@(Model.PageNumber - 1)">Previous</a>
            </li>

            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")" aria-current="@(i == Model.PageNumber ? "page" : null)">
                    <a class="page-link" asp-page="./Index"
                       asp-route-PageSize="@Model.PageSize"
                       asp-route-PageNumber="@i">@i</a>
                </li>
            }

            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-page="./Index"
                   asp-route-PageSize="@Model.PageSize"
                   asp-route-PageNumber="@(Model.PageNumber + 1)">Next</a>
            </li>
        </ul>
    </nav>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}