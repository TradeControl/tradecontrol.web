@page
@inject Wangkanai.Detection.Services.IDetectionService Detection
@using Wangkanai.Detection.Models
@model TradeControl.Web.Pages.Tax.Vat.Periods.IndexModel

@{
    ViewData["Title"] = "Period Vat";
    var btnWidthClass = (Detection?.Device?.Type == Device.Mobile) ? "w-100" : "w-25";
}

<h1>@ViewData["Title"]</h1>

<form class="mb-3" method="get">
    <div class="row g-2 align-items-center">
        <div class="col-auto">
            <select asp-for="PeriodName" asp-items="Model.PeriodNames" class="form-control"></select>
        </div>

        <div class="col-auto">
            <!-- reset to first page when page size changes -->
            <input type="hidden" name="PageNumber" value="1" />
            <select asp-for="PageSize"
                    asp-items="Model.PageSizeOptions"
                    class="form-control"
                    aria-label="Rows per page"
                    onchange="this.form.submit()"></select>
            <noscript>
                <button type="submit" class="btn btn-sm btn-outline-secondary ms-2">Apply</button>
            </noscript>
        </div>

        <div class="col-auto">
            <input type="submit" value="Filter" class="btn btn-primary" />
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Cash_VatSummary[0].TaxCode)</th>
            <th>@Html.DisplayNameFor(model => model.Cash_VatSummary[0].VatDue)</th>

            @if (Detection?.Device?.Type != Device.Mobile)
            {
                <th>@Html.DisplayNameFor(model => model.Cash_VatSummary[0].HomeSalesVat)</th>
                <th>@Html.DisplayNameFor(model => model.Cash_VatSummary[0].ExportSalesVat)</th>
                <th>@Html.DisplayNameFor(model => model.Cash_VatSummary[0].HomePurchasesVat)</th>
                <th>@Html.DisplayNameFor(model => model.Cash_VatSummary[0].ExportPurchasesVat)</th>
            }

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cash_VatSummary)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.TaxCode)</td>
                <td>@Html.DisplayFor(modelItem => item.VatDue)</td>

                @if (Detection?.Device?.Type != Device.Mobile)
                {
                    <td>@Html.DisplayFor(modelItem => item.HomeSalesVat)</td>
                    <td>@Html.DisplayFor(modelItem => item.ExportSalesVat)</td>
                    <td>@Html.DisplayFor(modelItem => item.HomePurchasesVat)</td>
                    <td>@Html.DisplayFor(modelItem => item.ExportPurchasesVat)</td>
                }

                <td>
                    <div class="action-buttons">
                        <a class="btn btn-info" asp-page="./Details" asp-route-startOn="@item.StartOn.ToLongDateString()" asp-route-taxCode="@item.TaxCode" title="Details">
                            <i class="bi bi-info-circle" aria-hidden="true"></i>
                            <span class="visually-hidden">Details</span>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalTaxValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalTaxValue)
        </dd>
    </dl>
</div>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination">
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" asp-page="./Index"
                   asp-route-PeriodName="@Model.PeriodName"
                   asp-route-PageSize="@Model.PageSize"
                   asp-route-PageNumber="@(Model.PageNumber - 1)">Previous</a>
            </li>

            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")" aria-current="@(i == Model.PageNumber ? "page" : null)">
                    <a class="page-link" asp-page="./Index"
                       asp-route-PeriodName="@Model.PeriodName"
                       asp-route-PageSize="@Model.PageSize"
                       asp-route-PageNumber="@i">@i</a>
                </li>
            }

            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-page="./Index"
                   asp-route-PeriodName="@Model.PeriodName"
                   asp-route-PageSize="@Model.PageSize"
                   asp-route-PageNumber="@(Model.PageNumber + 1)">Next</a>
            </li>
        </ul>
    </nav>
}

<p>
    <a asp-page="../Index" class="btn btn-outline-info @btnWidthClass">Totals</a>
</p>
