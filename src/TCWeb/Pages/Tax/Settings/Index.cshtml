@page
@inject Wangkanai.Detection.Services.IDetectionService Detection
@using Wangkanai.Detection.Models
@model TradeControl.Web.Pages.Tax.Settings.IndexModel

@{
    ViewData["Title"] = "Tax Settings";

    var embedded = (Request.Query.TryGetValue("embedded", out var emb) && emb == "1");
    var returnNode = Request.Query.TryGetValue("returnNode", out var rn) ? rn.ToString() : "TaxSettings";

    if (embedded)
    {
        Layout = "/Pages/Shared/_EmbeddedLayout.cshtml";
    }

    var backToManagerUrl = $"/Admin/Manager/Index?node={Uri.EscapeDataString(returnNode)}";
}

@if (!embedded)
{
    <h1 class="h4 mb-2 mt-2">@ViewData["Title"]</h1>
}
else
{
    <div class="fw-semibold mb-2">@ViewData["Title"]</div>
}

<div class="@(embedded ? "bg-white border rounded p-3" : "")">
    @if (!embedded && Detection.Device.Type == Device.Mobile)
    {
        <div class="d-flex flex-wrap gap-2 mb-3">
            <a href="@backToManagerUrl" class="btn btn-outline-secondary">Back</a>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-sm table-striped align-middle mb-0">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.App_TaxTypes[0].TaxType)</th>
                    @if (Detection?.Device?.Type != Device.Mobile)
                    {
                        <th>@Html.DisplayNameFor(model => model.App_TaxTypes[0].CashDescription)</th>
                        <th>@Html.DisplayNameFor(model => model.App_TaxTypes[0].MonthName)</th>
                        <th>@Html.DisplayNameFor(model => model.App_TaxTypes[0].Recurrence)</th>
                        <th>@Html.DisplayNameFor(model => model.App_TaxTypes[0].SubjectName)</th>
                        <th>@Html.DisplayNameFor(model => model.App_TaxTypes[0].OffsetDays)</th>
                    }
                    <th style="width:1%; white-space:nowrap;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.App_TaxTypes)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.TaxType)</td>
                        @if (Detection?.Device?.Type != Device.Mobile)
                        {
                            <td>@Html.DisplayFor(modelItem => item.CashDescription)</td>
                            <td>@Html.DisplayFor(modelItem => item.MonthName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Recurrence)</td>
                            <td>@Html.DisplayFor(modelItem => item.SubjectName)</td>
                            <td>@Html.DisplayFor(modelItem => item.OffsetDays)</td>
                        }
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a class="btn btn-outline-primary"
                                   asp-page="./Details"
                                   asp-route-taxTypeCode="@item.TaxTypeCode"
                                   asp-route-embedded="@(embedded ? "1" : null)"
                                   asp-route-returnNode="@returnNode"
                                   title="Details">
                                    <i class="bi bi-eye" aria-hidden="true"></i>
                                </a>

                                @if (User.IsInRole(Constants.AdministratorsRole))
                                {
                                    <a class="btn btn-outline-secondary"
                                       asp-page="./Edit"
                                       asp-route-taxTypeCode="@item.TaxTypeCode"
                                       asp-route-embedded="@(embedded ? "1" : null)"
                                       asp-route-returnNode="@returnNode"
                                       title="Edit">
                                        <i class="bi bi-pencil" aria-hidden="true"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
