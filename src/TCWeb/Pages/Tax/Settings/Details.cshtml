@page
@model TradeControl.Web.Pages.Tax.Settings.DetailsModel
@{
    ViewData["Title"] = "Tax Setting";

    var embedded = (Request.Query.TryGetValue("embedded", out var emb) && emb == "1");
    var returnNode = Request.Query.TryGetValue("returnNode", out var rn) ? rn.ToString() : "TaxSettings";

    if (embedded)
    {
        Layout = "/Pages/Shared/_EmbeddedLayout.cshtml";
    }

    var backToIndexUrl = $"/Tax/Settings/Index?{(embedded ? "embedded=1&" : "")}returnNode={Uri.EscapeDataString(returnNode)}";
}

@if (!embedded)
{
    <h1 class="h4 mb-2 mt-2">@ViewData["Title"]</h1>
}
else
{
    <div class="fw-semibold mb-2">@ViewData["Title"]</div>
}

<div class="@(embedded ? "bg-white border rounded p-3" : "")">
    <div class="fw-semibold mb-2">@Html.DisplayFor(model => model.App_TaxType.TaxType)</div>

    <dl class="row mb-0">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.App_TaxType.CashDescription)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.App_TaxType.CashDescription)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.App_TaxType.MonthName)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.App_TaxType.MonthName)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.App_TaxType.Recurrence)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.App_TaxType.Recurrence)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.App_TaxType.SubjectName)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.App_TaxType.SubjectName)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.App_TaxType.OffsetDays)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.App_TaxType.OffsetDays)</dd>
    </dl>

    <div class="d-flex flex-wrap gap-2 mt-3">
        <a href="@backToIndexUrl" class="btn btn-outline-secondary">Back</a>
    </div>
</div>
