@page
@inject Wangkanai.Detection.Services.IDetectionService Detection
@using Wangkanai.Detection.Models
@model TradeControl.Web.Pages.Tax.TaxCode.SearchModel

@{
    ViewData["Title"] = "Search";
    var btnWidthClass = (Detection?.Device?.Type == Device.Mobile) ? "w-100" : "w-25";
}

<h1>@ViewData["Title"]</h1>

<form class="mb-3" method="get">
    <div class="row g-2 align-items-center">
        <div class="col-auto">
            <select asp-for="TaxType" asp-items="Model.TaxTypes" class="form-control">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-auto">
            <label class="visually-hidden" for="SearchString">Description</label>
            <input type="text" asp-for="SearchString" id="SearchString" class="form-control" placeholder="Description" />
        </div>
        <div class="col-auto">
            <input type="submit" value="Filter" class="btn btn-primary" />
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            @if (Detection?.Device?.Type != Device.Mobile)
            {
                <th>@Html.DisplayNameFor(model => model.App_TaxCodes[0].TaxCode)</th>
            }
            <th>@Html.DisplayNameFor(model => model.App_TaxCodes[0].TaxDescription)</th>
            <th>@Html.DisplayNameFor(model => model.App_TaxCodes[0].TaxType)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.App_TaxCodes)
        {
            <tr>
                @if (Detection?.Device?.Type != Device.Mobile)
                {
                    <td>@Html.DisplayFor(modelItem => item.TaxCode)</td>
                }
                <td>@Html.DisplayFor(modelItem => item.TaxDescription)</td>
                <td>@Html.DisplayFor(modelItem => item.TaxType)</td>
                <td>
                    <div class="action-buttons">
                        <a class="btn btn-info" asp-page="@Model.ReturnUrl" asp-route-taxcode="@item.TaxCode" title="Select this item">
                            <i class="bi bi-check2-square" aria-hidden="true"></i>
                            <span class="visually-hidden">Select</span>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}