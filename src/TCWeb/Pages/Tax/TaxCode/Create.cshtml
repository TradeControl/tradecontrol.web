@page
@model TradeControl.Web.Pages.Tax.TaxCode.CreateModel

@{
    ViewData["Title"] = "New Tax Code";

    var embedded = (Request.Query.TryGetValue("embedded", out var emb) && emb == "1");
    var returnNode = Request.Query.TryGetValue("returnNode", out var rn) ? rn.ToString() : "TaxCode";
    var taxType = Request.Query.TryGetValue("taxType", out var tt) ? tt.ToString() : null;
    var searchString = Request.Query.TryGetValue("searchString", out var ss) ? ss.ToString() : null;

    if (embedded)
    {
        Layout = "/Pages/Shared/_EmbeddedLayout.cshtml";
    }

    var backToIndexUrl = $"/Tax/TaxCode/Index?{(embedded ? "embedded=1&" : "")}returnNode={Uri.EscapeDataString(returnNode)}"
        + (!string.IsNullOrWhiteSpace(taxType) ? $"&taxType={Uri.EscapeDataString(taxType)}" : "")
        + (!string.IsNullOrWhiteSpace(searchString) ? $"&searchString={Uri.EscapeDataString(searchString)}" : "");
}

@if (!embedded)
{
    <div class="d-flex align-items-center justify-content-between mt-2 mb-2">
        <h1 class="h4 mb-0">@ViewData["Title"]</h1>
        <a class="btn btn-outline-secondary" href="@backToIndexUrl">Back</a>
    </div>
}
else
{
    <div class="fw-semibold mb-2">@ViewData["Title"]</div>
}

<div class="bg-white border rounded p-3">
    <div class="text-muted small mb-3">
        Enter a description. A code can be suggested automatically, but you can override it to match any internal coding policy.
    </div>

    <form method="post" autocomplete="off">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="App_tbTaxCode.TaxDescription" class="form-label"></label>
            <input asp-for="App_tbTaxCode.TaxDescription" class="form-control" />
            <span asp-validation-for="App_tbTaxCode.TaxDescription" class="text-danger"></span>
        </div>

        <div class="mb-2 form-check">
            <input class="form-check-input" type="checkbox" id="autoTaxCode" checked />
            <label class="form-check-label" for="autoTaxCode">Auto-generate Code from Description</label>
        </div>

        <div class="mb-3">
            <label asp-for="App_tbTaxCode.TaxCode" class="form-label"></label>
            <div class="input-group">
                <input asp-for="App_tbTaxCode.TaxCode" class="form-control" />
                <button type="button" class="btn btn-outline-secondary" id="btnGenerateTaxCode">Generate</button>
            </div>
            <div class="form-text text-muted">
                If left blank, a default will be suggested from the Description and made unique.
            </div>
            <span asp-validation-for="App_tbTaxCode.TaxCode" class="text-danger"></span>
        </div>

        <div class="row g-2">
            <div class="col-12 col-md-6 mb-3">
                <label asp-for="TaxType" class="form-label"></label>
                <select asp-for="TaxType" asp-items="Model.TaxTypes" class="form-select"></select>
                <span asp-validation-for="TaxType" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6 mb-3">
                <label asp-for="Rounding" class="form-label"></label>
                <select asp-for="Rounding" asp-items="Model.Roundings" class="form-select"></select>
                <span asp-validation-for="Rounding" class="text-danger"></span>
            </div>
        </div>

        <div class="row g-2">
            <div class="col-12 col-md-6 mb-3">
                <label asp-for="TaxRatePercent" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="TaxRatePercent" class="form-control" inputmode="decimal" />
                    <span class="input-group-text">%</span>
                </div>
                <span asp-validation-for="TaxRatePercent" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6 mb-3">
                <label asp-for="App_tbTaxCode.Decimals" class="form-label"></label>
                <input asp-for="App_tbTaxCode.Decimals" class="form-control" />
                <span asp-validation-for="App_tbTaxCode.Decimals" class="text-danger"></span>
            </div>
        </div>

        @if (embedded)
        {
            <input type="hidden" name="embedded" value="1" />
            <input type="hidden" name="returnNode" value="@returnNode" />
        }
        @if (!string.IsNullOrWhiteSpace(taxType))
        {
            <input type="hidden" name="taxType" value="@taxType" />
        }
        @if (!string.IsNullOrWhiteSpace(searchString))
        {
            <input type="hidden" name="searchString" value="@searchString" />
        }

        <div class="d-flex flex-wrap gap-2 mt-3">
            <button type="submit" class="btn btn-primary">Create</button>
            <a href="@backToIndexUrl" class="btn btn-outline-secondary" style="min-width:7.5rem;">Cancel</a>
        </div>
    </form>
</div>

<script>
    (function ()
    {
        const descInput = document.getElementById("App_tbTaxCode_TaxDescription");
        const codeInput = document.getElementById("App_tbTaxCode_TaxCode");
        const autoCode = document.getElementById("autoTaxCode");
        const genBtn = document.getElementById("btnGenerateTaxCode");

        if (!descInput || !codeInput || !autoCode || !genBtn)
        {
            return;
        }

        function isBlank(value)
        {
            return !value || value.trim().length === 0;
        }

        async function fetchSuggestedCode()
        {
            const desc = (descInput.value || "").trim();
            if (isBlank(desc))
                return "";

            const url = `${window.location.pathname}?handler=DefaultTaxCode&description=${encodeURIComponent(desc)}${window.location.search.includes("embedded=1") ? "&embedded=1" : ""}`;

            const response = await fetch(url, { method: "GET", headers: { "Accept": "application/json" } });
            if (!response.ok)
                return "";

            const data = await response.json();
            if (!data || data.ok !== true)
                return "";

            return data.taxCode || "";
        }

        async function refreshSuggestionIfAllowed()
        {
            if (!autoCode.checked)
                return;

            if (!isBlank(codeInput.value))
                return;

            const suggested = await fetchSuggestedCode();
            if (isBlank(codeInput.value))
                codeInput.value = suggested;
        }

        descInput.addEventListener("blur", async function ()
        {
            await refreshSuggestionIfAllowed();
        });

        codeInput.addEventListener("input", function ()
        {
            if (!isBlank(codeInput.value))
                autoCode.checked = false;
        });

        autoCode.addEventListener("change", async function ()
        {
            if (autoCode.checked && isBlank(codeInput.value))
                await refreshSuggestionIfAllowed();
        });

        genBtn.addEventListener("click", async function ()
        {
            const suggested = await fetchSuggestedCode();
            if (!isBlank(suggested))
                codeInput.value = suggested;
        });
    })();
</script>
