@page
@model TradeControl.Web.Pages.Tax.TaxCode.DeleteModel

@{
    ViewData["Title"] = "Delete Tax Code";

    var embedded = (Request.Query.TryGetValue("embedded", out var emb) && emb == "1");
    var returnNode = Request.Query.TryGetValue("returnNode", out var rn) ? rn.ToString() : "TaxCode";
    var taxType = Request.Query.TryGetValue("taxType", out var tt) ? tt.ToString() : null;
    var searchString = Request.Query.TryGetValue("searchString", out var ss) ? ss.ToString() : null;

    if (embedded)
    {
        Layout = "/Pages/Shared/_EmbeddedLayout.cshtml";
    }

    var backToIndexUrl = $"/Tax/TaxCode/Index?{(embedded ? "embedded=1&" : "")}returnNode={Uri.EscapeDataString(returnNode)}"
        + (!string.IsNullOrWhiteSpace(taxType) ? $"&taxType={Uri.EscapeDataString(taxType)}" : "")
        + (!string.IsNullOrWhiteSpace(searchString) ? $"&searchString={Uri.EscapeDataString(searchString)}" : "");
}

@if (!embedded)
{
    <h1 class="h4 mb-2 mt-2">@ViewData["Title"]</h1>
}
else
{
    <div class="fw-semibold mb-2">@ViewData["Title"]</div>
}

<div class="@(embedded ? "bg-white border rounded p-3" : "")">
    <div class="alert alert-warning mb-3" role="alert">
        This will permanently delete the selected tax code.
    </div>

    <dl class="row mb-3">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.App_TaxCode.TaxCode)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.App_TaxCode.TaxCode)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.App_TaxCode.TaxDescription)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.App_TaxCode.TaxDescription)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.App_TaxCode.TaxType)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.App_TaxCode.TaxType)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.App_TaxCode.TaxRate)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.App_TaxCode.TaxRate)</dd>
    </dl>

    <form method="post">
        <input type="hidden" name="taxCode" value="@Model.App_TaxCode.TaxCode" />

        @if (embedded)
        {
            <input type="hidden" name="embedded" value="1" />
            <input type="hidden" name="returnNode" value="@returnNode" />
        }
        @if (!string.IsNullOrWhiteSpace(taxType))
        {
            <input type="hidden" name="taxType" value="@taxType" />
        }
        @if (!string.IsNullOrWhiteSpace(searchString))
        {
            <input type="hidden" name="searchString" value="@searchString" />
        }

        <div class="d-flex flex-wrap gap-2">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@backToIndexUrl" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>
