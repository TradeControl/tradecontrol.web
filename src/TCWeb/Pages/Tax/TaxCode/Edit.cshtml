@page
@model TradeControl.Web.Pages.Tax.TaxCode.EditModel

@{
    ViewData["Title"] = "Edit Tax Code";

    var embedded = (Request.Query.TryGetValue("embedded", out var emb) && emb == "1");
    var returnNode = Request.Query.TryGetValue("returnNode", out var rn) ? rn.ToString() : "TaxCode";
    var taxType = Request.Query.TryGetValue("taxType", out var tt) ? tt.ToString() : null;
    var searchString = Request.Query.TryGetValue("searchString", out var ss) ? ss.ToString() : null;

    if (embedded)
    {
        Layout = "/Pages/Shared/_EmbeddedLayout.cshtml";
    }

    var backToIndexUrl = $"/Tax/TaxCode/Index?{(embedded ? "embedded=1&" : "")}returnNode={Uri.EscapeDataString(returnNode)}"
        + (!string.IsNullOrWhiteSpace(taxType) ? $"&taxType={Uri.EscapeDataString(taxType)}" : "")
        + (!string.IsNullOrWhiteSpace(searchString) ? $"&searchString={Uri.EscapeDataString(searchString)}" : "");
}

@if (!embedded)
{
    <div class="d-flex align-items-center justify-content-between mt-2 mb-2">
        <div class="d-flex flex-column">
            <h1 class="h4 mb-0">@ViewData["Title"]</h1>
            <div class="fw-semibold mt-1">@Model.App_tbTaxCode.TaxCode</div>
        </div>
        <a class="btn btn-outline-secondary" href="@backToIndexUrl">Back</a>
    </div>
}
else
{
    <div class="d-flex flex-column mb-2">
        <div class="fw-semibold">@ViewData["Title"]</div>
        <div class="fw-semibold">@Model.App_tbTaxCode.TaxCode</div>
    </div>
}

<div class="bg-white border rounded p-3">
    <div class="alert alert-warning mb-3" role="alert">
        <div class="fw-semibold">Warning</div>
        <div>
            Changing a tax code or tax rate can change historical tax results.
            If a new VAT rate applies, create a new tax code instead of editing an existing one.
        </div>
    </div>

    <form method="post" autocomplete="off">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="App_tbTaxCode.TaxCode" class="form-label"></label>
            <input asp-for="App_tbTaxCode.TaxCode" class="form-control fw-semibold" readonly />
            <span asp-validation-for="App_tbTaxCode.TaxCode" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="App_tbTaxCode.TaxDescription" class="form-label"></label>
            <input asp-for="App_tbTaxCode.TaxDescription" class="form-control" />
            <span asp-validation-for="App_tbTaxCode.TaxDescription" class="text-danger"></span>
        </div>

        <div class="row g-2">
            <div class="col-12 col-md-6 mb-3">
                <label asp-for="TaxType" class="form-label"></label>
                <select asp-for="TaxType" asp-items="Model.TaxTypes" class="form-select"></select>
                <span asp-validation-for="TaxType" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6 mb-3">
                <label asp-for="Rounding" class="form-label"></label>
                <select asp-for="Rounding" asp-items="Model.Roundings" class="form-select"></select>
                <span asp-validation-for="Rounding" class="text-danger"></span>
            </div>
        </div>

        <div class="row g-2">
            <div class="col-12 col-md-6 mb-3">
                <label asp-for="TaxRatePercent" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="TaxRatePercent" class="form-control" inputmode="decimal" />
                    <span class="input-group-text">% </span>
                </div>
                <span asp-validation-for="TaxRatePercent" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6 mb-3">
                <label asp-for="App_tbTaxCode.Decimals" class="form-label"></label>
                <input asp-for="App_tbTaxCode.Decimals" class="form-control" />
                <span asp-validation-for="App_tbTaxCode.Decimals" class="text-danger"></span>
            </div>
        </div>

        @if (embedded)
        {
            <input type="hidden" name="embedded" value="1" />
            <input type="hidden" name="returnNode" value="@returnNode" />
        }
        @if (!string.IsNullOrWhiteSpace(taxType))
        {
            <input type="hidden" name="taxType" value="@taxType" />
        }
        @if (!string.IsNullOrWhiteSpace(searchString))
        {
            <input type="hidden" name="searchString" value="@searchString" />
        }

        <div class="d-flex flex-wrap gap-2 mt-3">
            <button type="submit" class="btn btn-primary">Update</button>
            <a href="@backToIndexUrl" class="btn btn-outline-secondary" style="min-width:7.5rem;">Cancel</a>
        </div>
    </form>
</div>
