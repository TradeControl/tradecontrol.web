@page
@model TradeControl.Web.Pages.Tax.Company.LossesCarriedForwardModel
@{ ViewData["Title"] = "Company Statement"; }
<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cash_LossesCarriedForward[0].YearEndDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cash_LossesCarriedForward[0].TaxDue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cash_LossesCarriedForward[0].TaxBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cash_LossesCarriedForward[0].LossesCarriedForward)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cash_LossesCarriedForward)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.YearEndDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaxDue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaxBalance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LossesCarriedForward)
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-page="./Index" class="btn btn-outline-info">Totals</a>
</p>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}