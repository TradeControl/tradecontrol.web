@page
@model TradeControl.Web.Pages.Invoice.Raise.EditModel
@{ ViewData["Title"] = "Edit Entry"; }
<h1>@ViewData["Title"]</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Entry_Header.AccountName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry_Header.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry_Header.UserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry_Header.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry_Header.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry_Header.AccountCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry_Header.AccountCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry_Header.CashCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry_Header.CashCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry_Header.CashDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry_Header.CashDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry_Header.InvoiceType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry_Header.InvoiceType)
        </dd>
    </dl>
</div>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Invoice_Entry.TaxCode" class="control-label"></label>
                <p>
                    <select asp-for="TaxDescription" asp-items="Model.TaxDescriptions" class="form-control"></select>
                </p>
                <span asp-validation-for="Invoice_Entry.TaxCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Invoice_Entry.InvoicedOn" class="control-label"></label>
                <input asp-for="Invoice_Entry.InvoicedOn" class="form-control" />
                <span asp-validation-for="Invoice_Entry.InvoicedOn" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Invoice_Entry.TotalValue" class="control-label"></label>
                <input asp-for="Invoice_Entry.TotalValue" class="form-control" />
                <span asp-validation-for="Invoice_Entry.TotalValue" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Invoice_Entry.InvoiceValue" class="control-label"></label>
                <input asp-for="Invoice_Entry.InvoiceValue" class="form-control" />
                <span asp-validation-for="Invoice_Entry.InvoiceValue" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Invoice_Entry.ItemReference" class="control-label"></label>
                <input asp-for="Invoice_Entry.ItemReference" class="form-control" />
                <span asp-validation-for="Invoice_Entry.ItemReference" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Invoice_Entry.UserId" />
            <input type="hidden" asp-for="Invoice_Entry.InvoiceTypeCode" />
            <input type="hidden" asp-for="Invoice_Entry.AccountCode" />
            <input type="hidden" asp-for="Invoice_Entry.CashCode" />

            <div class="form-group">
                <input type="submit" value="SAVE" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-info">To List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
