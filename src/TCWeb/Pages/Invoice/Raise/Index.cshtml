@page
@inject Wangkanai.Detection.Services.IDetectionService Detection
@model TradeControl.Web.Pages.Invoice.Raise.IndexModel
@{ ViewData["Title"] = "Raise Invoices"; }
<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="./Create" asp-route-InvoiceType="@Model.InvoiceType" class="btn btn-outline-primary w-25" title="New Entry">New Entry</a>
</p>

<form class="mb-3" method="get">
    <div class="row g-2 align-items-center">
        <div class="col-auto">
            <select asp-for="InvoiceType" asp-items="Model.InvoiceTypes" class="form-control">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-auto">
            <input type="submit" value="Filter" class="btn btn-primary" />
        </div>
    </div>
</form>
<table class="table  table-striped">
    <thead>
        <tr>
            @if (Detection.Device.Type != Wangkanai.Detection.Models.Device.Mobile)
            {
                <th>
                    @Html.DisplayNameFor(model => model.Invoice_Entries[0].UserId)
                </th>
            }
            <th>
                @Html.DisplayNameFor(model => model.Invoice_Entries[0].SubjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice_Entries[0].InvoicedOn)
            </th>

            @if (Detection.Device.Type != Wangkanai.Detection.Models.Device.Mobile)
            {
                <th>
                    @Html.DisplayNameFor(model => model.Invoice_Entries[0].InvoiceType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Invoice_Entries[0].CashDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Invoice_Entries[0].ItemReference)
                </th>
            }

            <th>
                @Html.DisplayNameFor(model => model.Invoice_Entries[0].EntryValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Invoice_Entries)
        {
            <tr>
                @if (Detection.Device.Type != Wangkanai.Detection.Models.Device.Mobile)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                }
                <td>
                    <a asp-page="/Subject/Enquiry/Index" asp-route-accountCode="@item.SubjectCode">
                        @Html.DisplayFor(modelItem => item.SubjectName)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoicedOn)
                </td>

                @if (Detection.Device.Type != Wangkanai.Detection.Models.Device.Mobile)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.InvoiceType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CashDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemReference)
                    </td>
                }

                <td>
                    @Html.DisplayFor(modelItem => item.EntryValue)
                </td>
                <td>
                    <div class="action-buttons">
                        <a asp-page="./Details" asp-route-accountCode="@item.SubjectCode" asp-route-cashCode="@item.CashCode" class="btn btn-info" title="Details">
                            <i class="bi bi-info-circle"></i>
                        </a>
                        <a asp-page="./Edit" asp-route-accountCode="@item.SubjectCode" asp-route-cashCode="@item.CashCode" class="btn btn-secondary" title="Edit">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-page="./Post" asp-route-accountCode="@item.SubjectCode" asp-route-cashCode="@item.CashCode" class="btn btn-warning" title="Post">
                            <i class="bi bi-arrow-right-circle"></i>
                        </a>
                        <a asp-page="./Delete" asp-route-accountCode="@item.SubjectCode" asp-route-cashCode="@item.CashCode" class="btn btn-danger" title="Delete">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<form method="post">
    <div class="row g-2">
        <div class="col-auto">
            <input type="submit" value="Post All" class="btn btn-primary" />
        </div>
    </div>
</form>
