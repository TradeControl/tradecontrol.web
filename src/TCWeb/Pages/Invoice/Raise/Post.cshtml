@model TradeControl.Web.Pages.Invoice.Raise.PostModel
@{ ViewData["Title"] = "Post Invoice"; }
<h1>@ViewData["Title"]</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Entry.SubjectName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry.UserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry.SubjectCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry.SubjectCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry.CashCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry.CashCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry.CashDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry.CashDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry.InvoiceType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry.InvoiceType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry.InvoicedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry.InvoicedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry.TotalValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry.TotalValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry.InvoiceValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry.InvoiceValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry.TaxCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry.TaxCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry.TaxDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry.TaxDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Entry.ItemReference)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Entry.ItemReference)
        </dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Entry.UserId" />
    <input type="hidden" asp-for="Entry.SubjectCode" />
    <input type="hidden" asp-for="Entry.CashCode" />
    <input type="hidden" asp-for="Entry.InvoiceTypeCode" />
    <button type="submit" asp-page-handler="Entry" asp-route-accountCode="Entry.SubjectCode" class="btn btn-primary">Entry</button>
    <button type="submit" asp-page-handler="Account" asp-route-accountCode="Entry.SubjectCode" class="btn btn-primary">Account</button>
    <a asp-page="./Index" class="btn btn-info">To List</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

