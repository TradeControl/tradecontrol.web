@page
@model TradeControl.Web.Pages.Invoice.Update.EditItemModel
@{ ViewData["Title"] = "Edit Item"; }
<h1>@ViewData["Title"]</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Invoice_Detail.SubjectName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Invoice_Detail.InvoiceNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice_Detail.InvoiceNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Invoice_Detail.CashDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Invoice_Detail.CashDescription)
        </dd>
    </dl>
</div>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Invoice_Item.TaxCode" class="control-label"></label>
                <p>
                    <select asp-for="TaxDescription" asp-items="Model.TaxDescriptions" class="form-control"></select>
                </p>
            </div>

            <div class="mb-3">
                <label asp-for="Invoice_Item.TotalValue" class="control-label"></label>
                <input asp-for="Invoice_Item.TotalValue" class="form-control" />
                <span asp-validation-for="Invoice_Item.TotalValue" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Invoice_Item.InvoiceValue" class="control-label"></label>
                <input asp-for="Invoice_Item.InvoiceValue" class="form-control" />
                <span asp-validation-for="Invoice_Item.InvoiceValue" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Invoice_Item.ItemReference" class="control-label"></label>
                <input asp-for="Invoice_Item.ItemReference" class="form-control" />
                <span asp-validation-for="Invoice_Item.ItemReference" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Invoice_Item.InvoiceNumber" />
            <input type="hidden" asp-for="Invoice_Item.CashCode" />
            <input type="hidden" asp-for="Invoice_Item.TaxCode" />


            <div class="mb-3">
                <input type="submit" value="SAVE" class="btn btn-primary" />
                <a asp-page="./Edit" asp-route-invoiceNumber="@Model.Invoice_Item.InvoiceNumber" class="btn btn-info">To Header</a>
            </div>
        </form>
    </div>
</div>
