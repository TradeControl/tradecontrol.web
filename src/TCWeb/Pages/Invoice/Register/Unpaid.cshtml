@page
@inject Wangkanai.Detection.Services.IDetectionService Detection
@model TradeControl.Web.Pages.Invoice.Register.UnpaidModel
@{ ViewData["Title"] = "Unpaid Invoices"; }
<h1>@ViewData["Title"]</h1>

<form class="mb-3" method="get">
    <div class="row g-2 align-items-center">
        <div class="col-auto">
            <select asp-for="InvoiceType" asp-items="Model.InvoiceTypes" class="form-control">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-auto">
            <input type="submit" value="Filter" class="btn btn-primary" />
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            @if (Detection.Device.Type != Wangkanai.Detection.Models.Device.Mobile)
            {
                <th>
                    @Html.DisplayNameFor(model => model.Invoice_RegisterOverdue[0].InvoiceNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Invoice_RegisterOverdue[0].InvoiceType)
                </th>
            }
            <th>
                @Html.DisplayNameFor(model => model.Invoice_RegisterOverdue[0].SubjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice_RegisterOverdue[0].ExpectedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice_RegisterOverdue[0].InvoiceValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice_RegisterOverdue[0].UnpaidValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Invoice_RegisterOverdue)
        {
            <tr>
                @if (Detection.Device.Type != Wangkanai.Detection.Models.Device.Mobile)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.InvoiceNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvoiceType)
                    </td>
                }
                <td>
                    <a asp-page="/Subject/Enquiry/Index" asp-route-accountCode="@item.SubjectCode">
                        @Html.DisplayFor(modelItem => item.SubjectName)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpectedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnpaidValue)
                </td>
                <td>
                    <div class="action-buttons">
                        <a asp-page="./UnpaidDetail" asp-route-invoiceNumber="@item.InvoiceNumber" class="btn btn-info" title="Details">
                            <i class="bi bi-info-circle"></i>
                        </a>
                        <a asp-page="/Invoice/Update/Index" asp-route-invoiceNumber="@item.InvoiceNumber" class="btn btn-secondary" title="Edit">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-page="/Cash/PaymentEntry/Create" asp-route-accountCode="@item.SubjectCode" asp-route-mode="0" asp-route-returnUrl="/Invoice/Register/Unpaid" class="btn btn-outline-primary" title="Create Payment">
                            <i class="bi bi-credit-card"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalInvoiceValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalInvoiceValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPaidValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPaidValue)
        </dd>
    </dl>
</div>

<a asp-page="/Cash/PaymentEntry/Index" class="btn btn-info w-25" title="Post Payments">Post Payments</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

