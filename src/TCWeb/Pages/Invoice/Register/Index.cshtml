@page
@inject Wangkanai.Detection.Services.IDetectionService Detection
@model TradeControl.Web.Pages.Invoice.Register.IndexModel
@{ ViewData["Title"] = "Invoice Register"; }
<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="./Create" asp-route-InvoiceType="@Model.InvoiceType" class="btn btn-outline-primary w-25" title="New Entry">New Entry</a>
</p>

<form class="mb-3" method="get">
    <div class="row g-2 align-items-center">
        <div class="col-auto">
            <select asp-for="InvoiceType" asp-items="Model.InvoiceTypes" class="form-control">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-auto">
            <select asp-for="PeriodName" asp-items="Model.PeriodNames" class="form-control">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-auto">
            <input type="submit" value="Filter" class="btn btn-primary" />
        </div>
    </div>
</form>
<table class="table  table-striped">
    <thead>
        <tr>
            @if (Detection.Device.Type != Wangkanai.Detection.Models.Device.Mobile)
            {
                <th>
                    @Html.DisplayNameFor(model => model.Invoice_Details[0].UserId)
                </th>
            }
            <th>
                @Html.DisplayNameFor(model => model.Invoice_Details[0].SubjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice_Details[0].InvoicedOn)
            </th>

            @if (Detection.Device.Type != Wangkanai.Detection.Models.Device.Mobile)
            {
                <th>
                    @Html.DisplayNameFor(model => model.Invoice_Details[0].InvoiceType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Invoice_Details[0].CashDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Invoice_Details[0].ItemReference)
                </th>
            }

            <th>
                @Html.DisplayNameFor(model => model.Invoice_Details[0].InvoiceValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Invoice_Details)
        {
        <tr>
            @if (Detection.Device.Type != Wangkanai.Detection.Models.Device.Mobile)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
            }
            <td>
                <a asp-page="/Subject/Enquiry/Index" asp-route-accountCode="@item.SubjectCode">
                    @Html.DisplayFor(modelItem => item.SubjectName)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoicedOn)
            </td>

            @if (Detection.Device.Type != Wangkanai.Detection.Models.Device.Mobile)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CashDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemReference)
                </td>
            }

            <td>
                @Html.DisplayFor(modelItem => item.InvoiceValue)
            </td>
            <td>
                <div class="action-buttons">
                    <a asp-page="./Details" asp-route-invoiceNumber="@item.InvoiceNumber" asp-route-projectCode="@item.ProjectCode" class="btn btn-info" title="Details">
                        <i class="bi bi-info-circle"></i>
                    </a>
                    <a asp-page="/Invoice/Update/Index" asp-route-invoiceNumber="@item.InvoiceNumber" class="btn btn-secondary" title="Edit">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalInvoiceValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalInvoiceValue)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalTaxValue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalTaxValue)
        </dd>
    </dl>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
