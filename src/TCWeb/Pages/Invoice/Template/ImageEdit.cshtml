@page
@model TradeControl.Web.Pages.Invoice.Template.ImageEditModel
@{ ViewData["Title"] = "Edit Image Tag"; }
<h1>@ViewData["Title"]</h1>
<hr />
<h5>@Model.Web_tbImage.ImageFileName</h5>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Web_tbImage.ImageTag" class="control-label"></label>
                <input asp-for="Web_tbImage.ImageTag" class="form-control" />
                <span asp-validation-for="Web_tbImage.ImageTag" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Web_tbImage.ImageFileName" />
            <div class="form-group">
                <input type="submit" value="UPDATE" class="btn btn-primary" />
                <a asp-page="./Images" asp-route-templateId="@Model.TemplateId" class="btn btn-info">To List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
