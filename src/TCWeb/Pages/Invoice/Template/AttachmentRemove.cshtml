@page
@model TradeControl.Web.Pages.Invoice.Template.AttachmentRemoveModel
@{ ViewData["Title"] = "Unassign Attachment"; }
<h1>@ViewData["Title"]</h1>

<div>
    <h4>@Model.InvoiceType</h4>
    <hr />
    <form method="post">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Web_AttachmentInvoice.AttachmentFileName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Web_AttachmentInvoice.AttachmentFileName)
            </dd>
        </dl>

        <input type="hidden" asp-for="Web_AttachmentInvoice.AttachmentId" />
        <input type="hidden" asp-for="Web_AttachmentInvoice.AttachmentFileName" />
        <input type="hidden" asp-for="Web_AttachmentInvoice.InvoiceType" />
        <input type="hidden" asp-for="Web_AttachmentInvoice.InvoiceTypeCode" />

        <div class="form-group">
            <input type="submit" value="DELETE" class="btn btn-danger" />
            <a asp-page="./Images" asp-route-invoiceType="@Model.InvoiceType" class="btn btn-info">To List</a>
        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

