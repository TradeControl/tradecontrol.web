@using Microsoft.AspNetCore.Identity
@using TradeControl.Web.Areas.Identity.Data

@inject SignInManager<TradeControlWebUser> SignInManager
@inject UserManager<TradeControlWebUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a id="manage" class="nav-link tc-auth-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
    </li>
    <li>
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link tc-auth-link">Logout</button>
        </form>
    </li>
}
else
{
    <li>
        <a class="nav-link tc-auth-link" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li>
        <a class="nav-link tc-auth-link" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
