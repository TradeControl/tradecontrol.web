@page
@model TradeControl.Web.Pages.Admin.Setup.IndexModel
@{
    ViewData["Title"] = "Business Initialisation";

    var embedded = false;
    if (Request?.Query.ContainsKey("embedded") == true)
    {
        embedded = string.Equals(Request.Query["embedded"], "1", StringComparison.OrdinalIgnoreCase)
            || string.Equals(Request.Query["embedded"], "true", StringComparison.OrdinalIgnoreCase);
    }

    if (embedded)
    {
        Layout = null;
    }
}

@if (embedded)
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"]</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
    <body>
        <div class="container-fluid py-2">
            <h1 class="h5 mb-3">@ViewData["Title"]</h1>

            <h2 class="text-danger">Warning</h2>
            <p class="text-danger">This process wipes out all existing organisations and transactions.</p>
            <a asp-page="./Config" class="btn btn-danger">Okay to Proceed?</a>
        </div>
    </body>
    </html>

    return;
}

