@page
@model TradeControl.Web.Pages.Admin.Setup.IndexModel
@{
    ViewData["Title"] = "Business Initialisation";

    var embedded = false;
    if (Request?.Query.ContainsKey("embedded") == true)
    {
        embedded = string.Equals(Request.Query["embedded"], "1", StringComparison.OrdinalIgnoreCase)
            || string.Equals(Request.Query["embedded"], "true", StringComparison.OrdinalIgnoreCase);
    }

    var returnNode = (Request?.Query.ContainsKey("returnNode") == true)
        ? (Request.Query["returnNode"].ToString() ?? string.Empty)
        : string.Empty;

    if (embedded)
    {
        Layout = "/Pages/Shared/_EmbeddedLayout.cshtml";
    }
}

<div class="container-fluid py-2">
    @if (!embedded)
    {
        <h1 class="h4 mb-3">@ViewData["Title"]</h1>
    }

    <div class="alert alert-danger" role="alert">
        <div class="d-flex align-items-start gap-2">
            <div class="pt-1">
                <i class="bi bi-exclamation-triangle-fill" aria-hidden="true"></i>
            </div>
            <div>
                <div class="fw-semibold">Destructive action</div>
                <div>This process wipes out all existing organisations and transactions and replaces them with a blank database.</div>
                <div class="mt-1">Use this only when you are certain you want to re-initialize the business.</div>
            </div>
        </div>
    </div>

    <div class="border rounded bg-light p-3">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="confirmWipe">
            <label class="form-check-label" for="confirmWipe">
                I understand this will permanently delete the existing business data.
            </label>
        </div>

        <div class="mt-3 d-flex gap-2">
            <a asp-page="./Config"
               asp-route-embedded="@(embedded ? "1" : null)"
               asp-route-returnNode="@returnNode"
               asp-route-reinit="1"
               class="btn btn-danger"
               id="proceedButton"
               aria-disabled="true">
                Proceed to setup
            </a>

            @* Mobile uses full-page navigation; provide cancel back to Admin Manager *@
            @if (!string.IsNullOrWhiteSpace(returnNode))
            {
                <a href="/Admin/Manager/Index?node=@returnNode" class="btn btn-outline-secondary">Cancel</a>
            }
            else if (!embedded)
            {
                <a asp-page="/Admin/Manager/Index" class="btn btn-outline-secondary">Cancel</a>
            }
        </div>
    </div>
</div>

<script>
    (function ()
    {
        const confirm = document.getElementById("confirmWipe");
        const proceed = document.getElementById("proceedButton");
        if (!confirm || !proceed) return;

        function sync()
        {
            const enabled = confirm.checked === true;

            proceed.classList.toggle("disabled", !enabled);
            proceed.setAttribute("aria-disabled", enabled ? "false" : "true");

            if (enabled)
            {
                proceed.removeAttribute("tabindex");
            }
            else
            {
                proceed.setAttribute("tabindex", "-1");
            }
        }

        confirm.addEventListener("change", sync);
        sync();
    })();
</script>
