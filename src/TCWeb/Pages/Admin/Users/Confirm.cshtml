@page
@model TradeControl.Web.Pages.Admin.Users.ConfirmModel
@{ ViewData["Title"] = "Registration"; }

<h1>@ViewData["Title"]</h1>
<h3>Give this user system access?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AspNet_UserRegistration.UserName):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AspNet_UserRegistration.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AspNet_UserRegistration.EmailAddress):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AspNet_UserRegistration.EmailAddress)
        </dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="AspNet_UserRegistration.Id" />
        <input type="submit" value="Confirm" class="btn btn-warning" />
        <a asp-page="./Index" class="btn btn-info">To List</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}