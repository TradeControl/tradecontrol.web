@page
@model TradeControl.Web.Pages.Admin.Users.RoleModel
@{
    ViewData["Title"] = "Assign Role";

    var embedded = (Request.Query.TryGetValue("embedded", out var emb) && emb == "1");
    var returnNode = Request.Query.TryGetValue("returnNode", out var rn) ? rn.ToString() : "Users";

    if (embedded)
    {
        Layout = "/Pages/Shared/_EmbeddedLayout.cshtml";
    }

    var backToManagerUrl = $"/Admin/Manager/Index?node={Uri.EscapeDataString(returnNode)}";
}

@if (!embedded)
{
    <h1 class="h4 mb-2 mt-2">@ViewData["Title"]</h1>
}
else
{
    <div class="fw-semibold mb-2">@ViewData["Title"]</div>
}

<div class="@(embedded ? "bg-white border rounded p-3" : "")">
    <div class="row g-3">
        <div class="col-12 col-lg-7">
            <div class="border rounded bg-light p-3">
                <div class="row g-2">
                    <div class="col-12 col-md-6">
                        <div class="text-muted small">Username</div>
                        <div class="fw-semibold">@Model.AspNet_UserRegistration.UserName</div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="text-muted small">Email</div>
                        <div class="fw-semibold">@Model.AspNet_UserRegistration.EmailAddress</div>
                    </div>
                </div>
            </div>

            <form method="post" class="mt-3">
                <input type="hidden" asp-for="AspNet_UserRegistration.Id" />
                <input type="hidden" name="embedded" value="@(embedded ? "1" : "0")" />
                <input type="hidden" name="returnNode" value="@returnNode" />

                <div class="d-flex flex-column gap-2">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="AspNet_UserRegistration.IsManager" />
                        <label class="form-check-label" asp-for="AspNet_UserRegistration.IsManager"></label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" asp-for="AspNet_UserRegistration.IsAdministrator" />
                        <label class="form-check-label" asp-for="AspNet_UserRegistration.IsAdministrator"></label>
                    </div>
                </div>

                <div class="d-flex flex-wrap gap-2 mt-3">
                    <button type="submit"
                            class="btn btn-primary"
                            asp-route-id="@Model.AspNet_UserRegistration.Id"
                            asp-route-embedded="@(embedded ? "1" : null)"
                            asp-route-returnNode="@returnNode">
                        Save
                    </button>

                    <a asp-page="./Index"
                       asp-route-embedded="@(embedded ? "1" : null)"
                       asp-route-returnNode="@returnNode"
                       class="btn btn-outline-secondary"
                       style="min-width:7.5rem;">
                        Back to Users
                    </a>

                    @if (!embedded)
                    {
                        <a href="@backToManagerUrl"
                           class="btn btn-outline-secondary"
                           style="min-width:7.5rem;">
                            Back
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>
</div>
