@page
@model TradeControl.Web.Pages.Admin.Users.CreateModel
@{ ViewData["Title"] = "Create User"; }

<h1>@ViewData["Title"]</h1>
<hr />
<dl class="row">
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Usr_tbUser.EmailAddress)
    </dd>
</dl>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Usr_tbUser.UserId" class="control-label"></label>
                <input asp-for="Usr_tbUser.UserId" class="form-control" />
                <span asp-validation-for="Usr_tbUser.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usr_tbUser.UserName" class="control-label"></label>
                <input asp-for="Usr_tbUser.UserName" class="form-control" />
                <span asp-validation-for="Usr_tbUser.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usr_tbUser.PhoneNumber" class="control-label"></label>
                <input asp-for="Usr_tbUser.PhoneNumber" class="form-control" inputmode="tel" />
                <span asp-validation-for="Usr_tbUser.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usr_tbUser.MobileNumber" class="control-label"></label>
                <input asp-for="Usr_tbUser.MobileNumber" class="form-control" inputmode="tel" />
                <span asp-validation-for="Usr_tbUser.MobileNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usr_tbUser.Address" class="control-label"></label>
                <input asp-for="Usr_tbUser.Address" class="form-control" />
                <span asp-validation-for="Usr_tbUser.Address" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Usr_tbUser.IsAdministrator" /> @Html.DisplayNameFor(model => model.Usr_tbUser.IsAdministrator)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Usr_tbUser.CalendarCode" class="control-label"></label>
                <p>
                    <select asp-for="Usr_tbUser.CalendarCode" asp-items="Model.CalendarCodes" class="form-control"></select>
                </p>
            </div>

            <input type="hidden" asp-for="Usr_tbUser.LogonName" />
            <input type="hidden" asp-for="Usr_tbUser.EmailAddress" />
            <input type="hidden" asp-for="Usr_tbUser.IsEnabled" />
            <input type="hidden" asp-for="Usr_tbUser.InsertedBy" />
            <input type="hidden" asp-for="Usr_tbUser.InsertedOn" />
            <input type="hidden" asp-for="Usr_tbUser.UpdatedBy" />
            <input type="hidden" asp-for="Usr_tbUser.UpdatedOn" />

            <div class="form-group">
                <input type="submit" value="CREATE" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-info">To List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

