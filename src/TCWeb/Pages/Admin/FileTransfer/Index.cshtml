@page
@inject Wangkanai.Detection.Services.IDetectionService Detection
@using Wangkanai.Detection.Models
@model TradeControl.Web.Pages.Admin.FileTransfer.IndexModel

@{
    ViewData["Title"] = "File Transfer";
    var btnWidthClass = (Detection?.Device?.Type == Device.Mobile) ? "w-100" : "w-25";
}

<h1>@ViewData["Title"]</h1>

<div class="row g-2 mb-3">
    <div class="col-12 col-sm-3 d-flex">
        <a asp-page="./Upload" asp-route-contentType="@Model.ContentType"
           class="btn btn-outline-primary w-100 d-flex align-items-center justify-content-center"
           title="Upload files">
            <span class="text-truncate">Upload</span>
        </a>
    </div>

    <div class="col-12 col-sm-3 d-flex">
        <form method="post" class="w-100 d-flex align-items-center justify-content-center">
            <input type="hidden" asp-for="ContentType" />
            <button type="submit" asp-page-handler="SyncFiles"
                    class="btn btn-outline-success w-100"
                    title="Synchronise files">
                <span class="text-truncate">Sync</span>
            </button>
        </form>
    </div>
</div>

<form class="mb-3" method="get">
    <div class="row g-2 align-items-center">
        <div class="col-auto">
            <select asp-for="ContentType" asp-items="Model.ContentTypes" class="form-control"></select>
        </div>
        <div class="col-auto">
            <input type="submit" value="Select" class="btn btn-primary" />
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FileNames)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.FileNames)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item)
                </td>
                <td>
                    <a asp-page-handler="Download" asp-route-fileName="@item" class="btn btn-secondary" title="Download">
                        <i class="bi bi-download" aria-hidden="true"></i>
                        <span class="visually-hidden">Download</span>
                    </a>
                    <a asp-page="./Delete" asp-route-fileName="@item" asp-route-contentType="@Model.ContentType" class="btn btn-danger" title="Delete">
                        <i class="bi bi-trash" aria-hidden="true"></i>
                        <span class="visually-hidden">Delete</span>
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
