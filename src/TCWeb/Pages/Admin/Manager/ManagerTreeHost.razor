                    <div class="text-uppercase small text-muted px-2" style="letter-spacing:0.06em;">Documents</div>
                </div>

                <div class="d-flex align-items-center">
                    <button type="button"
                            class="btn btn-link text-start tc-tree-row p-0"
                            style="width:1.6rem;"
                            @onclick="ToggleTemplatesExpandAsync"
                            @onpointerdown="() => SetPressTarget(ManagerNode.Templates)"
                            aria-expanded="@_templatesExpanded"
                            title="Expand">
                        <span class="tc-tree-expander" aria-hidden="true">
                            <i class="bi @(_templatesExpanded ? "bi-caret-down-fill" : "bi-caret-right-fill")"></i>
                        </span>
                    </button>

                    <button type="button"
                            class="btn btn-link text-start w-100 tc-tree-row"
                            @onclick="SelectTemplatesAsync"
                            @onpointerdown="() => SetPressTarget(ManagerNode.Templates)">
                        <i class="bi bi-filetype-html me-2 tc-tree-icon" aria-hidden="true"></i>
                        <span class="tc-tree-label @(_selected == ManagerNode.Templates ? "tc-tree-label-selected" : "")">Templates</span>
                    </button>
                </div>

                @if (_templatesExpanded)
                {
                    <div class="ps-3">
                        <div class="d-flex align-items-center">
                            <button type="button"
                                    class="btn btn-link text-start tc-tree-row p-0"
                                    style="width:1.6rem;"
                                    @onclick="ToggleTemplateInvoicesExpandAsync"
                                    aria-expanded="@_templateInvoicesExpanded"
                                    title="Expand">
                                <span class="tc-tree-expander" aria-hidden="true">
                                    <i class="bi @(_templateInvoicesExpanded ? "bi-caret-down-fill" : "bi-caret-right-fill")"></i>
                                </span>
                            </button>

                            <button type="button"
                                    class="btn btn-link text-start w-100 tc-tree-row"
                                    @onclick="() => SelectPlaceholderAsync(ManagerNode.TemplateInvoices)"
                                    @onpointerdown="() => SetPressTarget(ManagerNode.TemplateInvoices)">
                                <i class="bi bi-receipt me-2 tc-tree-icon" aria-hidden="true"></i>
                                <span class="tc-tree-label @(_selected == ManagerNode.TemplateInvoices ? "tc-tree-label-selected" : "")">Invoices</span>
                            </button>
                        </div>

                        @if (_templateInvoicesExpanded)
                        {
                            <TemplateTreeBranch IsRoot="true"
                                                RootNodes="@InvoiceTypeRootNodes"
                                                GetChildren="GetInvoiceTreeChildrenAsync"
                                                OnLeafSelected="OnTemplateLeafSelectedAsync"
                                                SelectedKey="@_selectedTemplateKey"
                                                OnNodeSelected="OnTemplateNodeSelectedAsync"
                                                OnNodeContextMenu="OnTemplateNodeContextMenuAsync"
                                                RefreshToken="@_templateRefreshToken" />
                        }

                        <button type="button"
                                class="btn btn-link text-start w-100 tc-tree-row"
                                @onclick="() => SelectPlaceholderAsync(ManagerNode.TemplateSystem)"
                                @onpointerdown="() => SetPressTarget(ManagerNode.TemplateSystem)">
                            <span class="tc-tree-expander" aria-hidden="true">
                                <i class="bi bi-dot"></i>
                            </span>
                            <i class="bi bi-gear me-2 tc-tree-icon" aria-hidden="true"></i>
                            <span class="tc-tree-label @(_selected == ManagerNode.TemplateSystem ? "tc-tree-label-selected" : "")">System</span>
                        </button>
                    </div>
                }

                <button type="button"
                        class="btn btn-link text-start w-100 tc-tree-row"
                        @onclick="() => SelectPlaceholderAsync(ManagerNode.InvoiceSettings)"
                        @onpointerdown="() => SetPressTarget(ManagerNode.InvoiceSettings)">
                    <span class="tc-tree-expander" aria-hidden="true">
                        <i class="bi bi-dot"></i>
                    </span>
                    <i class="bi bi-hash me-2 tc-tree-icon" aria-hidden="true"></i>
                    <span class="tc-tree-label @(_selected == ManagerNode.InvoiceSettings ? "tc-tree-label-selected" : "")">Invoice Settings</span>
                </button>

                <div class="mt-2 ps-0">
                    <div class="text-uppercase small text-muted px-2" style="letter-spacing:0.06em;">Tax</div>
                </div>

                <button type="button"
                        class="btn btn-link text-start w-100 tc-tree-row"
                        @onclick="() => SelectPlaceholderAsync(ManagerNode.TaxSettings)"
                        @onpointerdown="() => SetPressTarget(ManagerNode.TaxSettings)">
                    <span class="tc-tree-expander" aria-hidden="true">
                        <i class="bi bi-dot"></i>
                    </span>
                    <i class="bi bi-sliders me-2 tc-tree-icon" aria-hidden="true"></i>
                    <span class="tc-tree-label @(_selected == ManagerNode.TaxSettings ? "tc-tree-label-selected" : "")">Tax Settings</span>
                </button>

                <button type="button"
                        class="btn btn-link text-start w-100 tc-tree-row"
                        @onclick="() => SelectPlaceholderAsync(ManagerNode.TaxCode)"
                        @onpointerdown="() => SetPressTarget(ManagerNode.TaxCode)">
                    <span class="tc-tree-expander" aria-hidden="true">
                        <i class="bi bi-dot"></i>
                    </span>
                    <i class="bi bi-receipt me-2 tc-tree-icon" aria-hidden="true"></i>
                    <span class="tc-tree-label @(_selected == ManagerNode.TaxCode ? "tc-tree-label-selected" : "")">VAT Tax Codes</span>
                </button>

                <button type="button"
                        class="btn btn-link text-start w-100 tc-tree-row"
                        @onclick="() => SelectPlaceholderAsync(ManagerNode.TaxCompany)"
                        @onpointerdown="() => SetPressTarget(ManagerNode.TaxCompany)">
                    <span class="tc-tree-expander" aria-hidden="true">
                        <i class="bi bi-dot"></i>
                    </span>
                    <i class="bi bi-bank me-2 tc-tree-icon" aria-hidden="true"></i>
                    <span class="tc-tree-label @(_selected == ManagerNode.TaxCompany ? "tc-tree-label-selected" : "")">Corporation Tax</span>
                </button>

                <div class="mt-2 ps-0">
                    <div class="text-uppercase small text-muted px-2" style="letter-spacing:0.06em;">Subjects</div>
                </div>

                <button type="button"
                        class="btn btn-link text-start w-100 tc-tree-row"
                        @onclick="() => SelectPlaceholderAsync(ManagerNode.SubjectType)"
                        @onpointerdown="() => SetPressTarget(ManagerNode.SubjectType)">
                    <span class="tc-tree-expander" aria-hidden="true">
                        <i class="bi bi-dot"></i>
                    </span>
                    <i class="bi bi-tags me-2 tc-tree-icon" aria-hidden="true"></i>
                    <span class="tc-tree-label @(_selected == ManagerNode.SubjectType ? "tc-tree-label-selected" : "")">Subject Types</span>
                </button>
            </div>
        }
    </div>

    @if (_ctx.IsOpen)
    {
        <div class="tc-tree-ctx-backdrop"
             @onclick="CloseContextMenu"></div>

        <div class="tc-tree-ctx-menu border rounded shadow bg-white py-1"
             style="left:@($"{_ctx.X}px"); top:@($"{_ctx.Y}px");"
             role="menu"
             aria-label="Tree actions">

            @if (_ctx.Target == ManagerNode.FileTransfer)
            {
                <button type="button" class="dropdown-item" @onclick="SyncFileTransferAsync">Sync</button>
                <div class="dropdown-divider my-1"></div>
            }
            else if (_ctx.Target == ManagerNode.FileTransferContentType && !string.IsNullOrWhiteSpace(_selectedContentType))
            {
                <button type="button" class="dropdown-item" @onclick="SyncFileTransferAsync">Sync</button>
                <button type="button" class="dropdown-item" @onclick="UploadContentTypeAsync">Upload</button>
                <div class="dropdown-divider my-1"></div>
            }

            <button type="button" class="dropdown-item" @onclick="ExpandAllAsync">Expand all</button>
            <button type="button" class="dropdown-item" @onclick="CollapseAllAsync">Collapse all</button>
        </div>
    }

    @if (_templateCtxIsOpen)
    {
        <div class="tc-tree-ctx-backdrop" @onclick="CloseTemplateContextMenu"></div>

        <div class="tc-tree-ctx-menu border rounded shadow bg-white py-1"
             style="left:@($"{_templateCtxX}px"); top:@($"{_templateCtxY}px");"
             role="menu"
             aria-label="Template actions">

            <button type="button" class="dropdown-item" @onclick="TemplateCtxOpenAsync">Open</button>

            @if (_templateCtxNode != null && CanRemove(_templateCtxNode))
            {
                <button type="button" class="dropdown-item text-danger" @onclick="TemplateCtxRemoveAsync">
                    @RemoveLabel(_templateCtxNode)
                </button>
            }

            <div class="dropdown-divider my-1"></div>
            <button type="button" class="dropdown-item" @onclick="TemplateCtxRefreshAsync">Refresh tree</button>
        </div>
    }
</div>

@code
{
    public enum ManagerNode
    {
        Root,
        Setup,

        Periods,
        FileTransfer,
        FileTransferContentType,
        Host,
        Users,

        Templates,
        TemplateInvoices,
        TemplateSystem,

        InvoiceSettings,

        TaxSettings,
        TaxCode,
        TaxCompany,

        SubjectType
    }

    public enum TreeActionType
    {
        FileTransferSync,
        FileTransferUpload
    }

    public record TreeAction(TreeActionType ActionType, string? ContentType);

    public enum TemplateTreeActionType
    {
        Refresh,
        Remove
    }

    public record TemplateTreeAction(TemplateTreeActionType ActionType, TemplateTreeNode Node);

    private static class TemplateKey
    {
        public static bool TryGetInvoiceTypeCode(string key, out short invoiceTypeCode)
        {
            invoiceTypeCode = default;

            if (string.IsNullOrWhiteSpace(key))
                return false;

            // invoiceType:{code}
            // invoiceType:{code}:templates
            // invoiceType:{code}:attachments
            // invoiceType:{code}:template:{templateId}
            if (!key.StartsWith("invoiceType:", StringComparison.OrdinalIgnoreCase))
                return false;

            var parts = key.Split(':');
            if (parts.Length < 2)
                return false;

            return short.TryParse(parts[1], out invoiceTypeCode);
        }

        public static bool TryGetTemplateId(string key, out int templateId)
        {
            templateId = default;

            if (string.IsNullOrWhiteSpace(key))
                return false;

            // invoiceType:{code}:template:{templateId}
            // invoiceType:{code}:template:{templateId}:images
            if (!key.Contains(":template:", StringComparison.OrdinalIgnoreCase))
                return false;

            var parts = key.Split(':');
            for (var i = 0; i < parts.Length - 1; i++)
            {
                if (string.Equals(parts[i], "template", StringComparison.OrdinalIgnoreCase)
                    && int.TryParse(parts[i + 1], out templateId))
                {
                    return true;
                }
            }

            templateId = default;
            return false;
        }
    }

    public record TemplateSelection(
        string Kind,
        string Key,
        short? InvoiceTypeCode,
        int? TemplateId,
        string? ImageTag,
        int? AttachmentId);

    [Parameter] public string RootLabel { get; set; } = "Business";
    [Parameter] public bool IsMobile { get; set; }

    [Parameter] public ManagerNode InitialSelectedNode { get; set; } = ManagerNode.Root;
    [Parameter] public string? InitialContentType { get; set; }

    [Parameter] public EventCallback<ManagerNode> OnNodeSelected { get; set; }
    [Parameter] public EventCallback<(ManagerNode Node, string? ContentType)> OnNodeSelectedEx { get; set; }
    [Parameter] public EventCallback<TreeAction> OnTreeAction { get; set; }
    [Parameter] public EventCallback<TemplateSelection> OnTemplateSelection { get; set; }
    [Parameter] public EventCallback<TemplateTreeAction> OnTemplateTreeAction { get; set; }

    private bool _rootExpanded = true;
    private bool _fileTransferExpanded;
    private bool _templatesExpanded;
    private bool _templateInvoicesExpanded;

    private List<TemplateTreeNode> InvoiceTypeRootNodes { get; set; } = [];

    private string? _selectedTemplateKey;

    private ManagerNode _selected = ManagerNode.Root;
    private string? _selectedContentType;

    private ManagerNode _pressTarget = ManagerNode.Root;
    private string? _pressContentType;

    private ContextMenuState _ctx = new();
    private CancellationTokenSource? _pressCts;

    private long _templateRefreshToken;

    private TemplateTreeNode? _templateCtxNode;

    protected override void OnParametersSet()
    {
        _selected = InitialSelectedNode;

        if (_selected == ManagerNode.FileTransferContentType && !string.IsNullOrWhiteSpace(InitialContentType))
            _selectedContentType = InitialContentType;

        if (_selected == ManagerNode.FileTransfer || _selected == ManagerNode.FileTransferContentType)
        {
            _rootExpanded = true;
            _fileTransferExpanded = true;
        }

        if (_selected == ManagerNode.Templates || _selected == ManagerNode.TemplateInvoices || _selected == ManagerNode.TemplateSystem)
        {
            _rootExpanded = true;
            _templatesExpanded = true;
        }
    }

    private async Task OnTemplateNodeSelectedAsync(TemplateTreeNode node)
    {
        _selectedTemplateKey = node.Key;

        // keep existing selection callback behavior
        if (OnTemplateSelection.HasDelegate)
        {
            short? invoiceTypeCode = null;
            int? templateId = null;
            string? imageTag = null;
            int? attachmentId = null;

            if (TemplateKey.TryGetInvoiceTypeCode(node.Key, out var invCode))
                invoiceTypeCode = invCode;

            if (TemplateKey.TryGetTemplateId(node.Key, out var tid))
                templateId = tid;

            if (node.Kind == TemplateTreeNodeKind.Image)
            {
                var parts = node.Key.Split(':');
                if (parts.Length >= 4)
                {
                    if (int.TryParse(parts[1], out var parsedTemplateId))
                        templateId = parsedTemplateId;

                    imageTag = parts[3];
                }
            }

            if (node.Kind == TemplateTreeNodeKind.Attachment)
            {
                var parts = node.Key.Split(':');
                if (parts.Length >= 4 && int.TryParse(parts[^1], out var aid))
                    attachmentId = aid;
            }

            await OnTemplateSelection.InvokeAsync(new TemplateSelection(
                Kind: node.Kind.ToString(),
                Key: node.Key,
                InvoiceTypeCode: invoiceTypeCode,
                TemplateId: templateId,
                ImageTag: imageTag,
                AttachmentId: attachmentId));
        }
    }

    private Task OnTemplateLeafSelectedAsync(TemplateTreeNode leaf) => Task.CompletedTask;

    private Task OpenTemplateContextMenuAsync(MouseEventArgs e, TemplateTreeNode node)
    {
        if (IsMobile)
            return Task.CompletedTask;

        _templateCtxNode = node;

        _ctx = _ctx with
        {
            IsOpen = true,
            Target = _selected,
            X = (int)e.ClientX,
            Y = (int)e.ClientY
        };

        return Task.CompletedTask;
    }

    private Task RefreshTemplateTreeAsync()
    {
        _templateRefreshToken++;
        StateHasChanged();
        return Task.CompletedTask;
    }

    private bool _templateCtxIsOpen;
    private int _templateCtxX;
    private int _templateCtxY;

    private async Task OnTemplateNodeContextMenuAsync((MouseEventArgs Args, TemplateTreeNode Node) ctx)
    {
        if (IsMobile)
            return;

        _templateCtxNode = ctx.Node;
        _templateCtxIsOpen = true;
        _templateCtxX = (int)ctx.Args.ClientX;
        _templateCtxY = (int)ctx.Args.ClientY;

        // Ensure selection follows right-click (helps menu behavior)
        _selectedTemplateKey = ctx.Node.Key;

        // Close the generic menu if it is open
        CloseContextMenu();

        await InvokeAsync(StateHasChanged);
    }

    private void CloseTemplateContextMenu()
    {
        _templateCtxIsOpen = false;
    }

    private async Task TemplateCtxOpenAsync()
    {
        CloseTemplateContextMenu();

        if (_templateCtxNode != null && OnTemplateSelection.HasDelegate)
            await OnTemplateNodeSelectedAsync(_templateCtxNode);
    }

    private async Task TemplateCtxRemoveAsync()
    {
        if (_templateCtxNode == null)
            return;

        CloseTemplateContextMenu();

        if (OnTemplateTreeAction.HasDelegate)
            await OnTemplateTreeAction.InvokeAsync(new TemplateTreeAction(TemplateTreeActionType.Remove, _templateCtxNode));
    }

    private Task TemplateCtxRefreshAsync()
    {
        CloseTemplateContextMenu();
        return RefreshTemplateTreeAsync();
    }

    private static bool CanRemove(TemplateTreeNode node) =>
        node.Kind is TemplateTreeNodeKind.Template
            or TemplateTreeNodeKind.Image
            or TemplateTreeNodeKind.Attachment;

    private static string RemoveLabel(TemplateTreeNode node) => node.Kind switch
    {
        TemplateTreeNodeKind.Template => "Remove template assignment",
        TemplateTreeNodeKind.Image => "Remove image",
        TemplateTreeNodeKind.Attachment => "Remove attachment",
        _ => "Remove"
    };

    private async Task RemoveSelectedTemplateNodeAsync()
    {
        if (_templateCtxNode == null)
            return;

        CloseContextMenu();

        // Navigation-only: RHS will show the remove confirmation page
        if (OnTemplateTreeAction.HasDelegate)
            await OnTemplateTreeAction.InvokeAsync(new TemplateTreeAction(TemplateTreeActionType.Remove, _templateCtxNode));
    }

    private async Task SelectRootAsync()
    {
        _selected = ManagerNode.Root;
        _rootExpanded = true;
        _selectedContentType = null;

        if (OnNodeSelected.HasDelegate)
            await OnNodeSelected.InvokeAsync(ManagerNode.Root);

        if (OnNodeSelectedEx.HasDelegate)
            await OnNodeSelectedEx.InvokeAsync((ManagerNode.Root, null));
    }

    private async Task SelectSetupAsync()
    {
        _selected = ManagerNode.Setup;
        _selectedContentType = null;

        if (OnNodeSelected.HasDelegate)
            await OnNodeSelected.InvokeAsync(ManagerNode.Setup);

        if (OnNodeSelectedEx.HasDelegate)
            await OnNodeSelectedEx.InvokeAsync((ManagerNode.Setup, null));
    }

    private async Task SelectPlaceholderAsync(ManagerNode node)
    {
        _selected = node;
        _selectedContentType = null;

        if (OnNodeSelected.HasDelegate)
            await OnNodeSelected.InvokeAsync(node);

        if (OnNodeSelectedEx.HasDelegate)
            await OnNodeSelectedEx.InvokeAsync((node, null));
    }

    private void SetPressTarget(ManagerNode node) => SetPressTarget(node, null);

    private void SetPressTarget(ManagerNode node, string? contentType)
    {
        _pressTarget = node;
        _pressContentType = contentType;
    }

    private Task ToggleFileTransferExpandAsync()
    {
        _fileTransferExpanded = !_fileTransferExpanded;
        return Task.CompletedTask;
    }

    private async Task SelectFileTransferAsync()
    {
        _selected = ManagerNode.FileTransfer;
        _selectedContentType = null;

        if (OnNodeSelected.HasDelegate)
            await OnNodeSelected.InvokeAsync(ManagerNode.FileTransfer);

        if (OnNodeSelectedEx.HasDelegate)
            await OnNodeSelectedEx.InvokeAsync((ManagerNode.FileTransfer, null));
    }

    private async Task SelectContentTypeAsync(string contentType)
    {
        _selected = ManagerNode.FileTransferContentType;
        _selectedContentType = contentType;

        if (OnNodeSelected.HasDelegate)
            await OnNodeSelected.InvokeAsync(ManagerNode.FileTransferContentType);

        if (OnNodeSelectedEx.HasDelegate)
            await OnNodeSelectedEx.InvokeAsync((ManagerNode.FileTransferContentType, contentType));
    }

    private Task ToggleTemplatesExpandAsync()
    {
        _templatesExpanded = !_templatesExpanded;
        return Task.CompletedTask;
    }

    private Task ToggleTemplateInvoicesExpandAsync()
    {
        _templateInvoicesExpanded = !_templateInvoicesExpanded;

        if (_templateInvoicesExpanded && InvoiceTypeRootNodes.Count == 0)
            _ = LoadInvoiceTreeRootAsync();

        return Task.CompletedTask;
    }

    private async Task LoadInvoiceTreeRootAsync()
    {
        var nodes = await TemplateTreeProvider.GetInvoiceTypeNodesAsync();
        InvoiceTypeRootNodes = nodes.ToList();
        await InvokeAsync(StateHasChanged);
    }

    private async Task<IReadOnlyList<TemplateTreeNode>> GetInvoiceTreeChildrenAsync(TemplateTreeNode parent)
    {
        if (parent.Kind == TemplateTreeNodeKind.InvoiceType)
        {
            if (!TemplateKey.TryGetInvoiceTypeCode(parent.Key, out var code))
                return [];

            return
            [
                new TemplateTreeNode($"invoiceType:{code}:templates", "Templates", TemplateTreeNodeKind.TemplatesFolder),
                new TemplateTreeNode($"invoiceType:{code}:attachments", "Attachments", TemplateTreeNodeKind.AttachmentsFolder),
            ];
        }

        if (parent.Kind == TemplateTreeNodeKind.TemplatesFolder)
        {
            if (!TemplateKey.TryGetInvoiceTypeCode(parent.Key, out var code))
                return [];

            return await TemplateTreeProvider.GetInvoiceTemplateNodesAsync(code);
        }

        if (parent.Kind == TemplateTreeNodeKind.Template)
        {
            return
            [
                new TemplateTreeNode($"{parent.Key}:images", "Images", TemplateTreeNodeKind.ImagesFolder),
            ];
        }

        if (parent.Kind == TemplateTreeNodeKind.ImagesFolder)
        {
            if (!TemplateKey.TryGetTemplateId(parent.Key, out var templateId))
                return [];

            return await TemplateTreeProvider.GetTemplateImageNodesAsync(templateId);
        }

        if (parent.Kind == TemplateTreeNodeKind.AttachmentsFolder)
        {
            if (!TemplateKey.TryGetInvoiceTypeCode(parent.Key, out var code))
                return [];

            return await TemplateTreeProvider.GetInvoiceAttachmentNodesAsync(code);
        }

        return [];
    }

    private async Task SelectTemplatesAsync()
    {
        _selected = ManagerNode.Templates;
        _selectedContentType = null;

        if (OnNodeSelected.HasDelegate)
            await OnNodeSelected.InvokeAsync(ManagerNode.Templates);

        if (OnNodeSelectedEx.HasDelegate)
            await OnNodeSelectedEx.InvokeAsync((ManagerNode.Templates, null));
    }

    private async Task SyncFileTransferAsync()
    {
        CloseContextMenu();

        if (OnTreeAction.HasDelegate)
            await OnTreeAction.InvokeAsync(new TreeAction(TreeActionType.FileTransferSync, _selectedContentType));
    }

    private async Task UploadContentTypeAsync()
    {
        CloseContextMenu();

        if (OnTreeAction.HasDelegate)
            await OnTreeAction.InvokeAsync(new TreeAction(TreeActionType.FileTransferUpload, _selectedContentType));
    }

    private Task OnContextMenuAsync(MouseEventArgs e)
    {
        if (IsMobile)
            return Task.CompletedTask;

        _ctx = new ContextMenuState
        {
            IsOpen = true,
            Target = _selected,
            X = (int)e.ClientX,
            Y = (int)e.ClientY
        };

        return Task.CompletedTask;
    }

    private Task ExpandAllAsync()
    {
        _rootExpanded = true;
        _fileTransferExpanded = true;
        _templatesExpanded = true;
        _templateInvoicesExpanded = true;
        CloseContextMenu();
        return Task.CompletedTask;
    }

    private Task CollapseAllAsync()
    {
        _rootExpanded = false;
        _fileTransferExpanded = false;
        _templatesExpanded = false;
        _templateInvoicesExpanded = false;
        CloseContextMenu();
        return Task.CompletedTask;
    }

    private void CloseContextMenu()
    {
        if (_ctx.IsOpen)
            _ctx = _ctx with { IsOpen = false };
    }

    private void OnKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Escape")
            CloseContextMenu();
    }

    private void OnPointerDown(PointerEventArgs e)
    {
        if (!IsMobile)
            return;

        _pressCts?.Cancel();
        _pressCts = new CancellationTokenSource();

        var x = (int)e.ClientX;
        var y = (int)e.ClientY;

        _ = LongPressOpenAsync(x, y, _pressCts.Token);
    }

    private void OnPointerUp(PointerEventArgs e) => _pressCts?.Cancel();
    private void OnPointerCancel(PointerEventArgs e) => _pressCts?.Cancel();

    private async Task LongPressOpenAsync(int x, int y, CancellationToken token)
    {
        try
        {
            await Task.Delay(550, token);

            if (_pressTarget == ManagerNode.FileTransferContentType && !string.IsNullOrWhiteSpace(_pressContentType))
            {
                _selected = ManagerNode.FileTransferContentType;
                _selectedContentType = _pressContentType;
            }
            else if (_pressTarget == ManagerNode.FileTransfer)
            {
                _selected = ManagerNode.FileTransfer;
                _selectedContentType = null;
            }

            _ctx = _ctx with { IsOpen = true, X = x, Y = y, Target = _pressTarget };
            await InvokeAsync(StateHasChanged);
        }
        catch (TaskCanceledException) { }
    }

    private record ContextMenuState
    {
        public bool IsOpen { get; init; }
        public ManagerNode Target { get; init; }
        public int X { get; init; }
        public int Y { get; init; }
    }
}
