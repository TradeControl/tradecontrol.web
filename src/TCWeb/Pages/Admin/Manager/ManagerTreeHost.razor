@using System.Threading
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web
@using TradeControl.Web.Mail
@using TradeControl.Web.Pages.Admin.Manager.Components

<div class="tc-tree-host"
     tabindex="0"
     @onkeydown="OnKeyDown">
    <div class="tc-admin-manager-tree"
         @oncontextmenu="OnContextMenuAsync"
         @oncontextmenu:preventDefault="true"
         @onpointerdown="OnPointerDown"
         @onpointerup="OnPointerUp"
         @onpointercancel="OnPointerCancel">
        <button type="button"
                class="btn btn-link text-start w-100 tc-tree-row"
                @onclick="SelectRootAsync"
                @onpointerdown="() => SetPressTarget(ManagerNode.Root)"
                aria-expanded="@_rootExpanded">
            <span class="tc-tree-expander" aria-hidden="true">
                <i class="bi @(_rootExpanded ? "bi-caret-down-fill" : "bi-caret-right-fill")"></i>
            </span>
            <i class="bi bi-building me-2 tc-tree-icon tc-tree-icon-root" aria-hidden="true"></i>
            <span class="tc-tree-label @(_selected == ManagerNode.Root ? "tc-tree-label-selected" : "")">@RootLabel</span>
        </button>

        @if (_rootExpanded)
        {
            <div class="ps-3">

                <div class="mt-2 ps-0">
                    <div class="text-uppercase small text-muted px-2" style="letter-spacing:0.06em;">Company</div>
                </div>

                <button type="button"
                        class="btn btn-link text-start w-100 tc-tree-row"
                        @onclick="SelectSetupAsync"
                        @onpointerdown="() => SetPressTarget(ManagerNode.Setup)">
                    <span class="tc-tree-expander" aria-hidden="true">
                        <i class="bi bi-dot"></i>
                    </span>
                    <i class="bi bi-gear me-2 tc-tree-icon tc-tree-icon-setup" aria-hidden="true"></i>
                    <span class="tc-tree-label @(_selected == ManagerNode.Setup ? "tc-tree-label-selected" : "")">Setup</span>
                </button>

                <div class="d-flex align-items-center">
                    <button type="button"
                            class="btn btn-link text-start tc-tree-row p-0"
                            style="width:1.6rem;"
                            @onclick="ToggleFileTransferExpandAsync"
                            @onpointerdown="() => SetPressTarget(ManagerNode.FileTransfer)"
                            aria-expanded="@_fileTransferExpanded"
                            title="Expand">
                        <span class="tc-tree-expander" aria-hidden="true">
                            <i class="bi @(_fileTransferExpanded ? "bi-caret-down-fill" : "bi-caret-right-fill")"></i>
                        </span>
                    </button>

                    <button type="button"
                            class="btn btn-link text-start w-100 tc-tree-row"
                            @onclick="SelectFileTransferAsync"
                            @onpointerdown="() => SetPressTarget(ManagerNode.FileTransfer)">
                        <i class="bi bi-upload me-2 tc-tree-icon tc-tree-icon-filetransfer" aria-hidden="true"></i>
                        <span class="tc-tree-label @(_selected == ManagerNode.FileTransfer ? "tc-tree-label-selected" : "")">File Transfer</span>
                    </button>
                </div>

                @if (_fileTransferExpanded)
                {
                    <div class="ps-3">
                        @foreach (var ct in TemplateManager.ContentTypes)
                        {
                            <button type="button"
                                    class="btn btn-link text-start w-100 tc-tree-row"
                                    @onclick="() => SelectContentTypeAsync(ct)"
                                    @onpointerdown="() => SetPressTarget(ManagerNode.FileTransferContentType, ct)">
                                <span class="tc-tree-expander" aria-hidden="true">
                                    <i class="bi bi-dot"></i>
                                </span>
                                <i class="bi bi-folder2-open me-2 tc-tree-icon tc-tree-icon-contenttype" aria-hidden="true"></i>
                                <span class="tc-tree-label @(_selected == ManagerNode.FileTransferContentType && string.Equals(_selectedContentType, ct, StringComparison.OrdinalIgnoreCase) ? "tc-tree-label-selected" : "")">@ct</span>
                            </button>
                        }
                    </div>
                }

                <button type="button"
                        class="btn btn-link text-start w-100 tc-tree-row"
                        @onclick="() => SelectPlaceholderAsync(ManagerNode.Users)"
                        @onpointerdown="() => SetPressTarget(ManagerNode.Users)">
                    <span class="tc-tree-expander" aria-hidden="true">
                        <i class="bi bi-dot"></i>
                    </span>
                    <i class="bi bi-people me-2 tc-tree-icon tc-tree-icon-users" aria-hidden="true"></i>
                    <span class="tc-tree-label @(_selected == ManagerNode.Users ? "tc-tree-label-selected" : "")">Users</span>
                </button>

                <div class="mt-2 ps-0">
                    <div class="text-uppercase small text-muted px-2" style="letter-spacing:0.06em;">Documents</div>
                </div>

                <div class="d-flex align-items-center">
                    <button type="button"
                            class="btn btn-link text-start tc-tree-row p-0"
                            style="width:1.6rem;"
                            @onclick="ToggleTemplatesExpandAsync"
                            @onpointerdown="() => SetPressTarget(ManagerNode.Templates)"
                            aria-expanded="@_templatesExpanded"
                            title="Expand">
                        <span class="tc-tree-expander" aria-hidden="true">
                            <i class="bi @(_templatesExpanded ? "bi-caret-down-fill" : "bi-caret-right-fill")"></i>
                        </span>
                    </button>

                    <button type="button"
                            class="btn btn-link text-start w-100 tc-tree-row"
                            @onclick="SelectTemplatesAsync"
                            @onpointerdown="() => SetPressTarget(ManagerNode.Templates)">
                        <i class="bi bi-filetype-html me-2 tc-tree-icon" aria-hidden="true"></i>
                        <span class="tc-tree-label @(_selected == ManagerNode.Templates ? "tc-tree-label-selected" : "")">Html Templates</span>
                    </button>
                </div>

                @if (_templatesExpanded)
                {
                    <div class="ps-3">
                        <div class="d-flex align-items-center">
                            <button type="button"
                                    class="btn btn-link text-start tc-tree-row p-0"
                                    style="width:1.6rem;"
                                    @onclick="ToggleTemplateInvoicesExpandAsync"
                                    aria-expanded="@_templateInvoicesExpanded"
                                    title="Expand">
                                <span class="tc-tree-expander" aria-hidden="true">
                                    <i class="bi @(_templateInvoicesExpanded ? "bi-caret-down-fill" : "bi-caret-right-fill")"></i>
                                </span>
                            </button>

                            <button type="button"
                                    class="btn btn-link text-start w-100 tc-tree-row"
                                    @onclick="() => SelectPlaceholderAsync(ManagerNode.TemplateInvoices)"
                                    @onpointerdown="() => SetPressTarget(ManagerNode.TemplateInvoices)">
                                <i class="bi bi-receipt me-2 tc-tree-icon" aria-hidden="true"></i>
                                <span class="tc-tree-label @(_selected == ManagerNode.TemplateInvoices ? "tc-tree-label-selected" : "")">Invoices</span>
                            </button>
                        </div>

                        <TemplateInvoicesBranch @ref="_templateInvoicesBranch"
                                                IsExpanded="@_templateInvoicesExpanded"
                                                InitialSelectedKey="@_templateKeyToRestore"
                                                OnTemplateSelection="OnTemplateSelection"
                                                OnTemplateTreeAction="OnTemplateTreeAction" />

                        <button type="button"
                                class="btn btn-link text-start w-100 tc-tree-row"
                                @onclick="() => SelectPlaceholderAsync(ManagerNode.TemplateSystem)"
                                @onpointerdown="() => SetPressTarget(ManagerNode.TemplateSystem)">
                            <span class="tc-tree-expander" aria-hidden="true">
                                <i class="bi bi-dot"></i>
                            </span>
                            <i class="bi bi-gear me-2 tc-tree-icon tc-tree-icon-template-system" aria-hidden="true"></i>
                            <span class="tc-tree-label @(_selected == ManagerNode.TemplateSystem ? "tc-tree-label-selected" : "")">System</span>
                        </button>
                    </div>
                }

                <button type="button"
                        class="btn btn-link text-start w-100 tc-tree-row"
                        @onclick="() => SelectPlaceholderAsync(ManagerNode.Host)"
                        @onpointerdown="() => SetPressTarget(ManagerNode.Host)">
                    <span class="tc-tree-expander" aria-hidden="true">
                        <i class="bi bi-dot"></i>
                    </span>
                    <i class="bi bi-envelope-at me-2 tc-tree-icon" aria-hidden="true"></i>
                    <span class="tc-tree-label @(_selected == ManagerNode.Host ? "tc-tree-label-selected" : "")">Email Host</span>
                </button>

                <div class="mt-2 ps-0">
                    <div class="text-uppercase small text-muted px-2" style="letter-spacing:0.06em;">Tax</div>
                </div>

                <button type="button"
                        class="btn btn-link text-start w-100 tc-tree-row"
                        @onclick="() => SelectPlaceholderAsync(ManagerNode.Periods)"
                        @onpointerdown="() => SetPressTarget(ManagerNode.Periods)">
                    <span class="tc-tree-expander" aria-hidden="true">
                        <i class="bi bi-dot"></i>
                    </span>
                    <i class="bi bi-calendar3 me-2 tc-tree-icon" aria-hidden="true"></i>
                    <span class="tc-tree-label @(_selected == ManagerNode.Periods ? "tc-tree-label-selected" : "")">Financial Periods</span>
                </button>

                <button type="button"
                        class="btn btn-link text-start w-100 tc-tree-row"
                        @onclick="() => SelectPlaceholderAsync(ManagerNode.TaxSettings)"
                        @onpointerdown="() => SetPressTarget(ManagerNode.TaxSettings)">
                    <span class="tc-tree-expander" aria-hidden="true">
                        <i class="bi bi-dot"></i>
                    </span>
                    <i class="bi bi-sliders me-2 tc-tree-icon" aria-hidden="true"></i>
                    <span class="tc-tree-label @(_selected == ManagerNode.TaxSettings ? "tc-tree-label-selected" : "")">Tax Settings</span>
                </button>

                <button type="button"
                        class="btn btn-link text-start w-100 tc-tree-row"
                        @onclick="() => SelectPlaceholderAsync(ManagerNode.TaxCode)"
                        @onpointerdown="() => SetPressTarget(ManagerNode.TaxCode)">
                    <span class="tc-tree-expander" aria-hidden="true">
                        <i class="bi bi-dot"></i>
                    </span>
                    <i class="bi bi-receipt me-2 tc-tree-icon" aria-hidden="true"></i>
                    <span class="tc-tree-label @(_selected == ManagerNode.TaxCode ? "tc-tree-label-selected" : "")">VAT Codes</span>
                </button>

                <button type="button"
                        class="btn btn-link text-start w-100 tc-tree-row"
                        @onclick="() => SelectPlaceholderAsync(ManagerNode.TaxCompany)"
                        @onpointerdown="() => SetPressTarget(ManagerNode.TaxCompany)">
                    <span class="tc-tree-expander" aria-hidden="true">
                        <i class="bi bi-dot"></i>
                    </span>
                    <i class="bi bi-bank me-2 tc-tree-icon" aria-hidden="true"></i>
                    <span class="tc-tree-label @(_selected == ManagerNode.TaxCompany ? "tc-tree-label-selected" : "")">Corporation Tax</span>
                </button>

                <div class="mt-2 ps-0">
                    <div class="text-uppercase small text-muted px-2" style="letter-spacing:0.06em;">Classifications</div>
                </div>

                <button type="button"
                        class="btn btn-link text-start w-100 tc-tree-row"
                        @onclick="() => SelectPlaceholderAsync(ManagerNode.InvoiceSettings)"
                        @onpointerdown="() => SetPressTarget(ManagerNode.InvoiceSettings)">
                    <span class="tc-tree-expander" aria-hidden="true">
                        <i class="bi bi-dot"></i>
                    </span>
                    <i class="bi bi-hash me-2 tc-tree-icon" aria-hidden="true"></i>
                    <span class="tc-tree-label @(_selected == ManagerNode.InvoiceSettings ? "tc-tree-label-selected" : "")">Invoice Settings</span>
                </button>

                <button type="button"
                        class="btn btn-link text-start w-100 tc-tree-row"
                        @onclick="() => SelectPlaceholderAsync(ManagerNode.SubjectType)"
                        @onpointerdown="() => SetPressTarget(ManagerNode.SubjectType)">
                    <span class="tc-tree-expander" aria-hidden="true">
                        <i class="bi bi-dot"></i>
                    </span>
                    <i class="bi bi-tags me-2 tc-tree-icon" aria-hidden="true"></i>
                    <span class="tc-tree-label @(_selected == ManagerNode.SubjectType ? "tc-tree-label-selected" : "")">Subject Types</span>
                </button>

            </div>
        }

    </div>

    @if (_ctx.IsOpen)
    {
        <div class="tc-tree-ctx-backdrop"
             @onclick="CloseContextMenu"></div>

        <div class="tc-tree-ctx-menu border rounded shadow bg-white py-1"
             style="left:@($"{_ctx.X}px"); top:@($"{_ctx.Y}px");"
             role="menu"
             aria-label="Tree actions">

            @if (_ctx.Target == ManagerNode.FileTransfer)
            {
                <button type="button" class="dropdown-item" @onclick="SyncFileTransferAsync">Sync</button>
            }
            else if (_ctx.Target == ManagerNode.FileTransferContentType && !string.IsNullOrWhiteSpace(_selectedContentType))
            {
                <button type="button" class="dropdown-item" @onclick="SyncFileTransferAsync">Sync</button>
                <button type="button" class="dropdown-item" @onclick="UploadContentTypeAsync">Upload</button>
            }
        </div>
    }
</div>

@code
{
    private TemplateInvoicesBranch? _templateInvoicesBranch;

    [Parameter] public string? InitialTemplateKey { get; set; }

    private string? _templateKeyToRestore;

    protected override void OnParametersSet()
    {
        _templateKeyToRestore = InitialTemplateKey;

        _selected = InitialSelectedNode;

        if (_selected == ManagerNode.FileTransferContentType && !string.IsNullOrWhiteSpace(InitialContentType))
            _selectedContentType = InitialContentType;

        if (_selected == ManagerNode.FileTransfer || _selected == ManagerNode.FileTransferContentType)
        {
            _rootExpanded = true;
            _fileTransferExpanded = true;
        }

        if (_selected == ManagerNode.Templates || _selected == ManagerNode.TemplateInvoices || _selected == ManagerNode.TemplateSystem)
        {
            _rootExpanded = true;
            _templatesExpanded = true;
        }

        if (!string.IsNullOrWhiteSpace(_templateKeyToRestore))
        {
            _rootExpanded = true;
            _templatesExpanded = true;
            _templateInvoicesExpanded = true;
            _selected = ManagerNode.TemplateInvoices;
        }
    }

    public void RequestRefreshTemplatesForInvoiceType(short invoiceTypeCode)
    {
        _templateInvoicesBranch?.RequestRefreshTemplatesForInvoiceType(invoiceTypeCode);
    }

    public enum ManagerNode
    {
        Root,
        Setup,

        Periods,
        FileTransfer,
        FileTransferContentType,
        Host,
        Users,

        Templates,
        TemplateInvoices,
        TemplateSystem,

        InvoiceSettings,

        TaxSettings,
        TaxCode,
        TaxCompany,

        SubjectType
    }

    public enum TreeActionType
    {
        FileTransferSync,
        FileTransferUpload
    }

    public record TreeAction(TreeActionType ActionType, string? ContentType);

    public enum TemplateTreeActionType
    {
        Refresh,
        Remove
    }

    public record TemplateTreeAction(TemplateTreeActionType ActionType, TradeControl.Web.AppServices.TemplateTreeNode Node);

    public record TemplateSelection(
        string Kind,
        string Key,
        short? InvoiceTypeCode,
        int? TemplateId,
        string? ImageTag,
        int? AttachmentId);

    [Parameter] public string RootLabel { get; set; } = "Business";
    [Parameter] public bool IsMobile { get; set; }

    [Parameter] public ManagerNode InitialSelectedNode { get; set; } = ManagerNode.Root;
    [Parameter] public string? InitialContentType { get; set; }

    [Parameter] public EventCallback<ManagerNode> OnNodeSelected { get; set; }
    [Parameter] public EventCallback<(ManagerNode Node, string? ContentType)> OnNodeSelectedEx { get; set; }
    [Parameter] public EventCallback<TreeAction> OnTreeAction { get; set; }
    [Parameter] public EventCallback<TemplateSelection> OnTemplateSelection { get; set; }
    [Parameter] public EventCallback<TemplateTreeAction> OnTemplateTreeAction { get; set; }

    private bool _rootExpanded = true;
    private bool _fileTransferExpanded;
    private bool _templatesExpanded;
    private bool _templateInvoicesExpanded;

    private ManagerNode _selected = ManagerNode.Root;
    private string? _selectedContentType;

    private ManagerNode _pressTarget = ManagerNode.Root;
    private string? _pressContentType;

    private ContextMenuState _ctx = new();
    private CancellationTokenSource? _pressCts;

    private async Task SelectRootAsync()
    {
        _selected = ManagerNode.Root;
        _rootExpanded = true;
        _selectedContentType = null;

        if (OnNodeSelected.HasDelegate)
            await OnNodeSelected.InvokeAsync(ManagerNode.Root);

        if (OnNodeSelectedEx.HasDelegate)
            await OnNodeSelectedEx.InvokeAsync((ManagerNode.Root, null));
    }

    private async Task SelectSetupAsync()
    {
        _selected = ManagerNode.Setup;
        _selectedContentType = null;

        if (OnNodeSelected.HasDelegate)
            await OnNodeSelected.InvokeAsync(ManagerNode.Setup);

        if (OnNodeSelectedEx.HasDelegate)
            await OnNodeSelectedEx.InvokeAsync((ManagerNode.Setup, null));
    }

    private async Task SelectPlaceholderAsync(ManagerNode node)
    {
        _selected = node;
        _selectedContentType = null;

        if (OnNodeSelected.HasDelegate)
            await OnNodeSelected.InvokeAsync(node);

        if (OnNodeSelectedEx.HasDelegate)
            await OnNodeSelectedEx.InvokeAsync((node, null));
    }

    private void SetPressTarget(ManagerNode node) => SetPressTarget(node, null);

    private void SetPressTarget(ManagerNode node, string? contentType)
    {
        _pressTarget = node;
        _pressContentType = contentType;
    }

    private Task ToggleFileTransferExpandAsync()
    {
        _fileTransferExpanded = !_fileTransferExpanded;
        return Task.CompletedTask;
    }

    private async Task SelectFileTransferAsync()
    {
        _selected = ManagerNode.FileTransfer;
        _selectedContentType = null;

        if (OnNodeSelected.HasDelegate)
            await OnNodeSelected.InvokeAsync(ManagerNode.FileTransfer);

        if (OnNodeSelectedEx.HasDelegate)
            await OnNodeSelectedEx.InvokeAsync((ManagerNode.FileTransfer, null));
    }

    private async Task SelectContentTypeAsync(string contentType)
    {
        _selected = ManagerNode.FileTransferContentType;
        _selectedContentType = contentType;

        if (OnNodeSelected.HasDelegate)
            await OnNodeSelected.InvokeAsync(ManagerNode.FileTransferContentType);

        if (OnNodeSelectedEx.HasDelegate)
            await OnNodeSelectedEx.InvokeAsync((ManagerNode.FileTransferContentType, contentType));
    }

    private Task ToggleTemplatesExpandAsync()
    {
        _templatesExpanded = !_templatesExpanded;
        return Task.CompletedTask;
    }

    private Task ToggleTemplateInvoicesExpandAsync()
    {
        _templateInvoicesExpanded = !_templateInvoicesExpanded;
        return Task.CompletedTask;
    }

    private async Task SelectTemplatesAsync()
    {
        _selected = ManagerNode.Templates;
        _selectedContentType = null;

        if (OnNodeSelected.HasDelegate)
            await OnNodeSelected.InvokeAsync(ManagerNode.Templates);

        if (OnNodeSelectedEx.HasDelegate)
            await OnNodeSelectedEx.InvokeAsync((ManagerNode.Templates, null));
    }

    private async Task SyncFileTransferAsync()
    {
        CloseContextMenu();

        if (OnTreeAction.HasDelegate)
            await OnTreeAction.InvokeAsync(new TreeAction(TreeActionType.FileTransferSync, _selectedContentType));
    }

    private async Task UploadContentTypeAsync()
    {
        CloseContextMenu();

        if (OnTreeAction.HasDelegate)
            await OnTreeAction.InvokeAsync(new TreeAction(TreeActionType.FileTransferUpload, _selectedContentType));
    }

    private Task OnContextMenuAsync(MouseEventArgs e)
    {
        if (IsMobile)
            return Task.CompletedTask;

        var hasItems =
            _selected == ManagerNode.FileTransfer
            || (_selected == ManagerNode.FileTransferContentType && !string.IsNullOrWhiteSpace(_selectedContentType));

        if (!hasItems)
        {
            CloseContextMenu();
            return Task.CompletedTask;
        }

        _ctx = new ContextMenuState
        {
            IsOpen = true,
            Target = _selected,
            X = (int)e.ClientX,
            Y = (int)e.ClientY
        };

        return Task.CompletedTask;
    }

    private void CloseContextMenu()
    {
        if (_ctx.IsOpen)
            _ctx = _ctx with { IsOpen = false };
    }

    private void OnKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Escape")
            CloseContextMenu();
    }

    private void OnPointerDown(PointerEventArgs e)
    {
        if (!IsMobile)
            return;

        _pressCts?.Cancel();
        _pressCts = new CancellationTokenSource();

        var x = (int)e.ClientX;
        var y = (int)e.ClientY;

        _ = LongPressOpenAsync(x, y, _pressCts.Token);
    }

    private void OnPointerUp(PointerEventArgs e) => _pressCts?.Cancel();
    private void OnPointerCancel(PointerEventArgs e) => _pressCts?.Cancel();

    private async Task LongPressOpenAsync(int x, int y, CancellationToken token)
    {
        try
        {
            await Task.Delay(550, token);

            if (_pressTarget == ManagerNode.FileTransferContentType && !string.IsNullOrWhiteSpace(_pressContentType))
            {
                _selected = ManagerNode.FileTransferContentType;
                _selectedContentType = _pressContentType;
            }
            else if (_pressTarget == ManagerNode.FileTransfer)
            {
                _selected = ManagerNode.FileTransfer;
                _selectedContentType = null;
            }

            // Only open if this node would have menu items
            var hasItems =
                _pressTarget == ManagerNode.FileTransfer
                || (_pressTarget == ManagerNode.FileTransferContentType && !string.IsNullOrWhiteSpace(_selectedContentType));

            if (!hasItems)
                return;

            _ctx = _ctx with { IsOpen = true, X = x, Y = y, Target = _pressTarget };
            await InvokeAsync(StateHasChanged);
        }
        catch (TaskCanceledException) { }
    }

    private record ContextMenuState
    {
        public bool IsOpen { get; init; }
        public ManagerNode Target { get; init; }
        public int X { get; init; }
        public int Y { get; init; }
    }
}
