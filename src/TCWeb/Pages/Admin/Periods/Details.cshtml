@page
@model TradeControl.Web.Pages.Admin.Periods.DetailsModel
@{ ViewData["Title"] = "Financial Period"; }
<h1>@ViewData["Title"]</h1>

<div>
    <h4>@Html.DisplayFor(model => model.App_Year.Description)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.App_Year.YearNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.App_Year.YearNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.App_Year.StartMonth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.App_Year.StartMonth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.App_Year.CashStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.App_Year.CashStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.App_Year.InsertedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.App_Year.InsertedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.App_Year.InsertedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.App_Year.InsertedOn)
        </dd>
    </dl>
</div>
<p>
    <a asp-page="./Index" class="btn btn-info">To List</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.App_YearPeriods[0].MonthName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.App_YearPeriods[0].CashStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.App_YearPeriods[0].StartOn)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.App_YearPeriods)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MonthName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CashStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CashStatus)
                </td>
            </tr>
        }
    </tbody>
</table>
