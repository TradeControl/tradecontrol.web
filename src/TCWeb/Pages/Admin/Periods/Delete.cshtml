@page
@model TradeControl.Web.Pages.Admin.Periods.DeleteModel
@{
    ViewData["Title"] = "Delete Financial Year";

    var embedded = (Request.Query.TryGetValue("embedded", out var emb) && emb == "1");
    var returnNode = Request.Query.TryGetValue("returnNode", out var rn) ? rn.ToString() : "Periods";

    if (embedded)
    {
        Layout = "/Pages/Shared/_EmbeddedLayout.cshtml";
    }
}

@if (!embedded)
{
    <h1 class="h4 mb-2 mt-2">@ViewData["Title"]</h1>
}
else
{
    <div class="fw-semibold mb-2">@ViewData["Title"]</div>
}

<div class="@(embedded ? "bg-white border rounded p-3" : "")">
    <div class="mb-2">
        <div class="text-muted small">Year</div>
        <div class="fw-semibold">@Html.DisplayFor(model => model.App_Year.Description)</div>
    </div>

    <dl class="row mb-3">
        <dt class="col-sm-3">Year Number</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.App_Year.YearNumber)</dd>

        <dt class="col-sm-3">Start Month</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.App_Year.StartMonth)</dd>

        <dt class="col-sm-3">Cash Status</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.App_Year.CashStatus)</dd>

        <dt class="col-sm-3">Inserted By</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.App_Year.InsertedBy)</dd>

        <dt class="col-sm-3">Inserted On</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.App_Year.InsertedOn)</dd>
    </dl>

    <form method="post" autocomplete="off">
        <input type="hidden" asp-for="@Model.App_Year.YearNumber" />

        @if (embedded)
        {
            <input type="hidden" name="embedded" value="1" />
            <input type="hidden" name="returnNode" value="@returnNode" />
        }

        <div class="d-flex flex-wrap gap-2">
            <button type="submit" class="btn btn-danger">Delete</button>

            <a asp-page="./Index"
               asp-route-embedded="@(embedded ? "1" : null)"
               asp-route-returnNode="@returnNode"
               class="btn btn-outline-secondary">
                Cancel
            </a>
        </div>
    </form>
</div>
