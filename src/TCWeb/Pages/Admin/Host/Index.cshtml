@page
@model TradeControl.Web.Pages.Admin.Host.IndexModel
@{ ViewData["Title"] = "Host Settings"; }
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HostDescription" class="control-label"></label>
                <p>
                    <select asp-for="HostDescription" asp-items="Model.HostDescriptions" class="form-control"></select>
                </p>
            </div>
            <div class="form-group">
                <input type="submit" value="SET HOST" class="btn btn-primary" />
                <a asp-page="./Create" class="btn btn-outline-primary">NEW HOST</a>
            </div>
        </form>
    </div>
</div>


<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.App_Hosts[0].HostDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.App_Hosts[0].EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.App_Hosts[0].HostName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.App_Hosts[0].HostPort)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.App_Hosts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HostDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HostName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HostPort)
                </td>

                <td>
                    <a asp-page="./Edit" asp-route-hostId="@item.HostId" class="btn btn-secondary"></a>
                    <a asp-page="./Delete" asp-route-hostId="@item.HostId" class="btn btn-danger"></a>
                </td>

            </tr>
        }
    </tbody>
</table>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}