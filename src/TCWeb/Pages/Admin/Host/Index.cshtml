@page
@inject Wangkanai.Detection.Services.IDetectionService Detection
@using Wangkanai.Detection.Models
@model TradeControl.Web.Pages.Admin.Host.IndexModel
@{
    ViewData["Title"] = "Host Settings";

    var embedded = (Request.Query.TryGetValue("embedded", out var emb) && emb == "1");
    var returnNode = Request.Query.TryGetValue("returnNode", out var rn) ? rn.ToString() : "Host";

    if (embedded)
    {
        Layout = "/Pages/Shared/_EmbeddedLayout.cshtml";
    }

    var backToManagerUrl = $"/Admin/Manager/Index?node={Uri.EscapeDataString(returnNode)}";
}

@if (!embedded)
{
    <h1 class="h4 mb-2 mt-2">@ViewData["Title"]</h1>
}
else
{
    <div class="fw-semibold mb-2">@ViewData["Title"]</div>
}

<div class="@(embedded ? "bg-white border rounded p-3" : "")">
    <div class="row">
        <div class="col-12 col-md-7 col-lg-5">
            <form method="post" autocomplete="off">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="HostDescription" class="form-label"></label>
                    <select asp-for="HostDescription" asp-items="Model.HostDescriptions" class="form-select"></select>
                </div>

                <div class="d-flex flex-wrap gap-2">
                    <button type="submit" class="btn btn-primary">Set Active</button>

                    <a asp-page="./Create"
                       asp-route-embedded="@(embedded ? "1" : null)"
                       asp-route-returnNode="@returnNode"
                       class="btn btn-outline-primary">New Host</a>

                    @if (User.IsInRole(TradeControl.Web.Authorization.Constants.AdministratorsRole))
                    {
                        <a asp-page="./RotateKeys"
                           asp-route-embedded="@(embedded ? "1" : null)"
                           asp-route-returnNode="@returnNode"
                           class="btn btn-outline-danger"
                           title="Rotate symmetric key and re-encrypt host passwords">Rotate Keys</a>
                    }

                    <button type="submit"
                            class="btn btn-outline-success"
                            asp-page-handler="Test"
                            asp-route-embedded="@(embedded ? "1" : null)"
                            asp-route-returnNode="@returnNode">
                        Test Email
                    </button>

                    @* Non-embedded only: return to Admin Manager *@
                    @if (!embedded)
                    {
                        <a href="@backToManagerUrl"
                           class="btn btn-outline-secondary"
                           style="min-width: 7.5rem;">
                            Back
                        </a>
                    }
                </div>
            </form>

            @if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
            {
                <div class="alert @(Model.StatusOk ? "alert-success" : "alert-danger") py-2 mt-3 mb-0">
                    @Model.StatusMessage
                </div>
            }

            @if (!string.IsNullOrWhiteSpace(Model.FlashMessage))
            {
                <div class="alert @(Model.FlashOk ? "alert-success" : "alert-danger") py-2 mt-3 mb-0" role="alert">
                    @Model.FlashMessage

                    @if (embedded)
                    {
                        <a class="alert-link ms-1"
                           href="/Admin/EventLog/Index"
                           target="_blank"
                           rel="noopener">
                            Event Logs
                        </a>
                    }
                    else
                    {
                        <a class="alert-link ms-1" href="/Admin/EventLog/Index">Event Logs</a>
                    }
                </div>
            }
        </div>
    </div>

    <hr class="my-3" />

    <div class="table-responsive">
        <table class="table table-sm table-striped align-middle mb-0">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.App_Hosts[0].HostDescription)</th>
                    @if (Detection.Device.Type != Device.Mobile)
                    {
                        <th>@Html.DisplayNameFor(model => model.App_Hosts[0].EmailAddress)</th>
                        <th>@Html.DisplayNameFor(model => model.App_Hosts[0].HostName)</th>
                        <th>@Html.DisplayNameFor(model => model.App_Hosts[0].HostPort)</th>
                    }
                    <th style="width:1%; white-space:nowrap;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.App_Hosts)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.HostDescription)</td>
                        @if (Detection.Device.Type != Device.Mobile)
                        {
                            <td>@Html.DisplayFor(modelItem => item.EmailAddress)</td>
                            <td>@Html.DisplayFor(modelItem => item.HostName)</td>
                            <td>@Html.DisplayFor(modelItem => item.HostPort)</td>
                        }
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-page="./Edit"
                                   asp-route-hostId="@item.HostId"
                                   asp-route-embedded="@(embedded ? "1" : null)"
                                   asp-route-returnNode="@returnNode"
                                   class="btn btn-outline-secondary"><i class="bi bi-pencil"></i></a>

                                <a asp-page="./Delete"
                                   asp-route-hostId="@item.HostId"
                                   asp-route-embedded="@(embedded ? "1" : null)"
                                   asp-route-returnNode="@returnNode"
                                   class="btn btn-outline-danger"><i class="bi bi-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
