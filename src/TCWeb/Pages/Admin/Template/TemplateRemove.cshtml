@page
@model TradeControl.Web.Pages.Admin.Template.TemplateRemoveModel

@{
    ViewData["Title"] = "Remove Template Assignment";

    var embedded = false;
    if (Request?.Query.ContainsKey("embedded") == true)
    {
        embedded = string.Equals(Request.Query["embedded"], "1", StringComparison.OrdinalIgnoreCase)
            || string.Equals(Request.Query["embedded"], "true", StringComparison.OrdinalIgnoreCase);
    }

    if (embedded)
    {
        Layout = "/Pages/Shared/_EmbeddedLayout.cshtml";
    }

    var returnNode = (Request?.Query.ContainsKey("returnNode") == true)
        ? (Request.Query["returnNode"].ToString() ?? "Templates")
        : "Templates";

    var backHref = $"/Admin/Manager/Index?node={Uri.EscapeDataString(returnNode)}";
}

<div class="container-fluid py-2">
    @if (!embedded)
    {
        <h1 class="h4 mb-2">@ViewData["Title"]</h1>
        <div class="text-muted mb-3">@Model.Web_TemplateInvoice.InvoiceType</div>
    }
    else
    {
        <div class="d-flex align-items-start justify-content-between mb-2">
            <div>
                <div class="fw-semibold">@ViewData["Title"]</div>
                <div class="text-muted small">@Model.Web_TemplateInvoice.InvoiceType</div>
            </div>
            <div class="small text-muted">TemplateId: @Model.Web_TemplateInvoice.TemplateId</div>
        </div>
    }

    <div class="alert alert-warning" role="alert">
        This will unassign the template from this invoice type. The HTML template file will not be deleted.
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex align-items-center justify-content-between">
            <div class="fw-semibold">Confirm removal</div>

            @if (!embedded)
            {
                <a class="btn btn-outline-secondary btn-sm" href="@backHref">Back</a>
            }
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Template file</dt>
                <dd class="col-sm-9 text-break">@Model.Web_TemplateInvoice.TemplateFileName</dd>

                <dt class="col-sm-3">Last used</dt>
                <dd class="col-sm-9">@Model.Web_TemplateInvoice.LastUsedOn</dd>
            </dl>

            <form method="post" class="mt-3">
                <input type="hidden" asp-for="Web_TemplateInvoice.InvoiceTypeCode" />
                <input type="hidden" asp-for="Web_TemplateInvoice.InvoiceType" />
                <input type="hidden" asp-for="Web_TemplateInvoice.TemplateId" />
                <input type="hidden" asp-for="Web_TemplateInvoice.TemplateFileName" />
                <input type="hidden" asp-for="Web_TemplateInvoice.LastUsedOn" />

                @* Preserve UX context *@
                <input type="hidden" name="embedded" value="@(embedded ? "1" : "0")" />
                <input type="hidden" name="returnNode" value="@returnNode" />

                <div class="d-flex gap-2 flex-wrap">
                    <button type="submit" class="btn btn-danger">Remove</button>

                    <a asp-page="./Invoices"
                       asp-route-invoiceType="@Model.Web_TemplateInvoice.InvoiceType"
                       asp-route-embedded="@(embedded ? "1" : null)"
                       asp-route-returnNode="@returnNode"
                       class="btn btn-outline-secondary">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@if (embedded)
{
    <script>
        (function ()
        {
            try
            {
                window.parent.postMessage(
                    {
                        type: "tc.template.refresh",
                        scope: "invoiceType.templates",
                        invoiceTypeCode: @((short)Model.Web_TemplateInvoice.InvoiceTypeCode)
                    },
                    "*"
                );
            }
            catch
            {
            }
        })();
    </script>
}
