@page
@inject Wangkanai.Detection.Services.IDetectionService Detection
@using Wangkanai.Detection.Models
@model TradeControl.Web.Pages.Subject.Enquiry.PaymentsModel

@{
    ViewData["Title"] = "Payments";
    var btnWidthClass = (Detection?.Device?.Type == Device.Mobile) ? "w-100" : "w-25";
}

<h1>@ViewData["Title"]</h1>

<h4>@Html.DisplayFor(model => model.Subject_Account.SubjectName)</h4>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Subject_Payments[0].PaidOn)</th>
            @if (Detection?.Device?.Type != Device.Mobile)
            {
                <th>@Html.DisplayNameFor(model => model.Subject_Payments[0].PaymentReference)</th>
            }
            <th>@Html.DisplayNameFor(model => model.Subject_Payments[0].PaidOutValue)</th>
            <th>@Html.DisplayNameFor(model => model.Subject_Payments[0].PaidInValue)</th>
            @if (Detection?.Device?.Type != Device.Mobile)
            {
                <th>@Html.DisplayNameFor(model => model.Subject_Payments[0].AccountName)</th>
                <th>@Html.DisplayNameFor(model => model.Subject_Payments[0].UserName)</th>
            }
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Subject_Payments)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.PaidOn)</td>
                @if (Detection?.Device?.Type != Device.Mobile)
                {
                    <td>@Html.DisplayFor(modelItem => item.PaymentReference)</td>
                }
                <td>@Html.DisplayFor(modelItem => item.PaidOutValue)</td>
                <td>@Html.DisplayFor(modelItem => item.PaidInValue)</td>
                @if (Detection?.Device?.Type != Device.Mobile)
                {
                    <td>@Html.DisplayFor(modelItem => item.AccountName)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                }
                <td>
                    <div class="action-buttons">
                        <a class="btn btn-info" asp-page="/Cash/Statement/Details" asp-route-paymentCode="@item.PaymentCode" title="Details">
                            <i class="bi bi-info-circle" aria-hidden="true"></i>
                            <span class="visually-hidden">Details</span>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a class="btn btn-info @btnWidthClass" asp-page="./Index" asp-route-accountCode="@Model.Subject_Account.SubjectCode" title="Back to list">To List</a>
</p>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
