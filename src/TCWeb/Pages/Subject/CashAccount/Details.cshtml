@page
@model TradeControl.Web.Pages.Subject.CashAccount.DetailsModel
@{ ViewData["Title"] = "Cash Account"; }

<h1>@ViewData["Title"]</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Subject_CashAccount.AccountName)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject_CashAccount.AccountCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject_CashAccount.AccountCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject_CashAccount.SubjectCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject_CashAccount.SubjectCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject_CashAccount.SubjectName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject_CashAccount.SubjectName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject_CashAccount.CashCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject_CashAccount.CashCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject_CashAccount.CashDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject_CashAccount.CashDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject_CashAccount.OpeningBalance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject_CashAccount.OpeningBalance)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject_CashAccount.CurrentBalance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject_CashAccount.CurrentBalance)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject_CashAccount.LiquidityLevel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject_CashAccount.LiquidityLevel)
        </dd>
        @{
            if (Model.Subject_CashAccount.AccountTypeCode == 0)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Subject_CashAccount.AccountNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Subject_CashAccount.AccountNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Subject_CashAccount.SortCode)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Subject_CashAccount.SortCode)
                </dd>
            }
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject_CashAccount.AccountClosed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject_CashAccount.AccountClosed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject_CashAccount.InsertedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject_CashAccount.InsertedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject_CashAccount.InsertedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject_CashAccount.InsertedOn)
        </dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-cashSubjectCode="@Model.Subject_CashAccount.AccountCode" class="btn btn-secondary">Edit</a>
    <a asp-page="./Index" asp-route-accountType=@Model.Subject_CashAccount.AccountType class="btn btn-info">To List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}