@page
@inject Wangkanai.Detection.Services.IDetectionService Detection
@using Wangkanai.Detection.Models
@model TradeControl.Web.Pages.Subject.CashAccount.IndexModel

@{
    ViewData["Title"] = "Cash Accounts";
    var btnWidthClass = (Detection?.Device?.Type == Device.Mobile) ? "w-100" : "w-25";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-outline-primary @btnWidthClass" asp-page="Create" asp-route-accountType="@Model.AccountType" title="Create New">New Account</a>
</p>

<form class="mb-3" method="get">
    <div class="row g-2 align-items-center">
        <div class="col-auto">
            <select asp-for="AccountType" asp-items="Model.AccountTypes" class="form-control">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-auto">
            <input type="submit" value="Filter" class="btn btn-primary" />
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Subject_CashAccounts[0].AccountName)</th>
            @if (Detection?.Device?.Type != Device.Mobile)
            {
                <th>@Html.DisplayNameFor(model => model.Subject_CashAccounts[0].SubjectName)</th>
                <th>@Html.DisplayNameFor(model => model.Subject_CashAccounts[0].CashDescription)</th>
                <th>@Html.DisplayNameFor(model => model.Subject_CashAccounts[0].OpeningBalance)</th>
                <th>@Html.DisplayNameFor(model => model.Subject_CashAccounts[0].LiquidityLevel)</th>
            }
            <th>@Html.DisplayNameFor(model => model.Subject_CashAccounts[0].AccountClosed)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Subject_CashAccounts)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.AccountName)</td>
                @if (Detection?.Device?.Type != Device.Mobile)
                {
                    <td>@Html.DisplayFor(modelItem => item.SubjectName)</td>
                    <td>@Html.DisplayFor(modelItem => item.CashDescription)</td>
                    <td>@Html.DisplayFor(modelItem => item.OpeningBalance)</td>
                    <td>@Html.DisplayFor(modelItem => item.LiquidityLevel)</td>
                }
                <td>@Html.DisplayFor(modelItem => item.AccountClosed)</td>
                <td>
                    <div class="action-buttons">
                        <a class="btn btn-info" asp-page="./Details" asp-route-cashSubjectCode="@item.AccountCode" title="Details">
                            <i class="bi bi-info-circle" aria-hidden="true"></i>
                            <span class="visually-hidden">Details</span>
                        </a>
                        <a class="btn btn-secondary" asp-page="./Edit" asp-route-cashSubjectCode="@item.AccountCode" title="Edit this item">
                            <i class="bi bi-pencil-square" aria-hidden="true"></i>
                            <span class="visually-hidden">Edit</span>
                        </a>
                        <a class="btn btn-danger" asp-page="./Delete" asp-route-cashSubjectCode="@item.AccountCode" title="Delete this item">
                            <i class="bi bi-trash" aria-hidden="true"></i>
                            <span class="visually-hidden">Delete</span>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}