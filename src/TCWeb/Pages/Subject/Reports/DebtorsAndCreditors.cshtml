@page
@inject Wangkanai.Detection.Services.IDetectionService Detection
@using Wangkanai.Detection.Models
@model TradeControl.Web.Pages.Subject.Reports.DebtorsAndCreditorsModel

@{
    ViewData["Title"] = "Debtors and Creditors";
    var btnWidthClass = (Detection?.Device?.Type == Device.Mobile) ? "w-100" : "w-25";
}

<h1>@ViewData["Title"]</h1>

<form class="mb-3" method="get">
    <div class="row g-2 align-items-center">
        <div class="col-auto">
            <select asp-for="PeriodName" asp-items="Model.PeriodNames" class="form-control"></select>
        </div>
        <div class="col-auto">
            <select asp-for="AssetType" asp-items="Model.AssetTypes" class="form-control">
                <option value="">All</option>
            </select>
        </div>

        <div class="col-auto">
            <!-- reset to first page when page size changes -->
            <input type="hidden" name="PageNumber" value="1" />
            <select asp-for="PageSize" asp-items="Model.PageSizeOptions" class="form-control" aria-label="Rows per page" onchange="this.form.submit()"></select>
            <noscript>
                <button type="submit" class="btn btn-sm btn-outline-secondary ms-2">Apply</button>
            </noscript>
        </div>

        <div class="col-auto">
            <input type="submit" value="Filter" class="btn btn-primary" />
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            @if (Detection?.Device?.Type != Device.Mobile)
            {
                <th>@Html.DisplayNameFor(model => model.Subject_BalanceSheetAudit[0].Description)</th>
                <th>@Html.DisplayNameFor(model => model.Subject_BalanceSheetAudit[0].MonthName)</th>
                <th>@Html.DisplayNameFor(model => model.Subject_BalanceSheetAudit[0].AssetType)</th>
            }
            <th>@Html.DisplayNameFor(model => model.Subject_BalanceSheetAudit[0].SubjectName)</th>
            @if (Detection?.Device?.Type != Device.Mobile)
            {
                <th>@Html.DisplayNameFor(model => model.Subject_BalanceSheetAudit[0].SubjectType)</th>
            }
            <th>@Html.DisplayNameFor(model => model.Subject_BalanceSheetAudit[0].Balance)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Subject_BalanceSheetAudit)
        {
            <tr>
                @if (Detection?.Device?.Type != Device.Mobile)
                {
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.MonthName)</td>
                    <td>@Html.DisplayFor(modelItem => item.AssetType)</td>
                }
                <td>@Html.DisplayFor(modelItem => item.SubjectName)</td>
                @if (Detection?.Device?.Type != Device.Mobile)
                {
                    <td>@Html.DisplayFor(modelItem => item.SubjectType)</td>
                }
                <td>@Html.DisplayFor(modelItem => item.Balance)</td>
                <td>
                    <div class="action-buttons">
                        <a class="btn btn-info" asp-page="../Enquiry/Details" asp-route-accountCode="@item.SubjectCode" title="Details">
                            <i class="bi bi-info-circle" aria-hidden="true"></i>
                            <span class="visually-hidden">Details</span>
                        </a>
                        <a class="btn btn-warning" asp-page="../Enquiry/Invoices" asp-route-accountCode="@item.SubjectCode" title="View invoices">
                            <i class="bi bi-list" aria-hidden="true"></i>
                            <span class="visually-hidden">Invoices</span>
                        </a>
                        <a class="btn btn-success" asp-page="../Enquiry/Payments" asp-route-accountCode="@item.SubjectCode" title="View payments">
                            <i class="bi bi-currency-dollar" aria-hidden="true"></i>
                            <span class="visually-hidden">Payments</span>
                        </a>
                        <a class="btn btn-dark" asp-page="../Enquiry/Statement" asp-route-accountCode="@item.SubjectCode" title="View statement">
                            <i class="bi bi-list" aria-hidden="true"></i>
                            <span class="visually-hidden">Statement</span>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination">
            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                <a class="page-link" asp-page="./DebtorsAndCreditors"
                   asp-route-PeriodName="@Model.PeriodName"
                   asp-route-AssetType="@Model.AssetType"
                   asp-route-PageSize="@Model.PageSize"
                   asp-route-PageNumber="@(Model.PageNumber - 1)">Previous</a>
            </li>

            @for (var i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")" aria-current="@(i == Model.PageNumber ? "page" : null)">
                    <a class="page-link" asp-page="./DebtorsAndCreditors"
                       asp-route-PeriodName="@Model.PeriodName"
                       asp-route-AssetType="@Model.AssetType"
                       asp-route-PageSize="@Model.PageSize"
                       asp-route-PageNumber="@i">@i</a>
                </li>
            }

            <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-page="./DebtorsAndCreditors"
                   asp-route-PeriodName="@Model.PeriodName"
                   asp-route-AssetType="@Model.AssetType"
                   asp-route-PageSize="@Model.PageSize"
                   asp-route-PageNumber="@(Model.PageNumber + 1)">Next</a>
            </li>
        </ul>
    </nav>
}
