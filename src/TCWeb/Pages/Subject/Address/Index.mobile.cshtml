@page
@model TradeControl.Web.Pages.Subject.Address.IndexModel
@{ ViewData["Title"] = "Addresses"; }
<h1>@ViewData["Title"]</h1>
<h4>@Html.DisplayFor(model => model.Subject_Account.SubjectName)</h4>
<hr />
<p>
    <a asp-page="Create" asp-route-accountCode="@Model.Subject_Account.SubjectCode" class="btn btn-outline-primary">New Address</a>
    <a asp-page="../Update/Edit" asp-route-accountCode="@Model.Subject_Account.SubjectCode" class="btn btn-info">To Edit</a>
</p>

<table class="table  table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subject_AddressList[0].Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Subject_AddressList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-addressCode="@item.AddressCode" class="btn btn-info"></a>
                    <a asp-page="./Edit" asp-route-addressCode="@item.AddressCode" class="btn btn-secondary"></a>
                    <a asp-page="./Delete" asp-route-addressCode="@item.AddressCode" class="btn btn-danger"></a>
                </td>
            </tr>
        }
    </tbody>
</table>