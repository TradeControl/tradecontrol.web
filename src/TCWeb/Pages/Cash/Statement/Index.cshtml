@page
@inject Wangkanai.Detection.Services.IDetectionService Detection
@model TradeControl.Web.Pages.Cash.Statement.IndexModel
@{ ViewData["Title"] = "Cash Statements"; }
<h1>@ViewData["Title"]</h1>

<form class="mb-3" method="get">
    <div class="row g-2 align-items-center">
        <div class="col-auto">
            <select asp-for="AccountName" asp-items="Model.AccountNames" class="form-control"></select>
        </div>
        <div class="col-auto">
            <select asp-for="PeriodName" asp-items="Model.PeriodNames" class="form-control">
                @*<option value="">All</option>*@
            </select>
        </div>
        <div class="col-auto">
            <input type="submit" value="Filter" class="btn btn-primary" />
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            @if (Detection.Device.Type != Wangkanai.Detection.Models.Device.Mobile)
            {
                <th>
                    @Html.DisplayNameFor(model => model.Cash_AccountStatement[0].EntryNumber)
                </th>
            }
            <th>
                @Html.DisplayNameFor(model => model.Cash_AccountStatement[0].PaidOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cash_AccountStatement[0].SubjectName)
            </th>

            @if (Detection.Device.Type != Wangkanai.Detection.Models.Device.Mobile)
            {
                <th>
                    @Html.DisplayNameFor(model => model.Cash_AccountStatement[0].PaymentReference)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cash_AccountStatement[0].PaidOutValue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cash_AccountStatement[0].PaidInValue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cash_AccountStatement[0].PaidBalance)
                </th>
            }
            else
            {
                <th>
                    @Html.DisplayNameFor(model => model.Cash_AccountStatement[0].PaidInValue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cash_AccountStatement[0].PaidOutValue)
                </th>
                <th></th>
            }

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cash_AccountStatement)
        {
            <tr>
                @if (Detection.Device.Type != Wangkanai.Detection.Models.Device.Mobile)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.EntryNumber)
                    </td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.PaidOn)
                </td>
                <td>
                    <a asp-page="/Subject/Enquiry/Index" asp-route-accountCode="@item.SubjectCode">
                        @Html.DisplayFor(modelItem => item.SubjectName)
                    </a>
                </td>

                @if (Detection.Device.Type != Wangkanai.Detection.Models.Device.Mobile)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentReference)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaidOutValue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaidInValue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaidBalance)
                    </td>
                }
                else
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.PaidInValue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaidOutValue)
                    </td>
                    <td></td>
                }

                <td>
                    @if (item.EntryNumber != 0)
                    {
                        <a asp-page="./Details" asp-route-paymentCode="@item.PaymentCode" class="btn btn-info" title="Details"></a>
                        <a asp-page="./Edit" asp-route-paymentCode="@item.PaymentCode" class="btn btn-secondary" title="Edit"></a>
                        <a asp-page="./Delete" asp-route-paymentCode="@item.PaymentCode" class="btn btn-danger" title="Delete"></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subject_CashAccount.SubjectName)
            </th>

            @if (Detection.Device.Type != Wangkanai.Detection.Models.Device.Mobile)
            {
                <th>
                    @Html.DisplayNameFor(model => model.Subject_CashAccount.AccountType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Subject_CashAccount.SubjectType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Subject_CashAccount.SortCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Subject_CashAccount.AccountNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Subject_CashAccount.CurrentBalance)
                </th>
            }
            else
            {
                <th>
                    @Html.DisplayNameFor(model => model.Subject_CashAccount.CurrentBalance)
                </th>
            }
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Subject_CashAccount.SubjectName)
            </td>

            @if (Detection.Device.Type != Wangkanai.Detection.Models.Device.Mobile)
            {
                <td>
                    @Html.DisplayFor(model => model.Subject_CashAccount.AccountType)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Subject_CashAccount.SubjectType)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Subject_CashAccount.SortCode)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Subject_CashAccount.AccountNumber)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Subject_CashAccount.CurrentBalance)
                </td>
            }
            else
            {
                <td>
                    @Html.DisplayFor(model => model.Subject_CashAccount.CurrentBalance)
                </td>
            }
        </tr>
    </tbody>
</table>

<div>
    <a asp-page="./Index" asp-route-cashSubjectName="@Model.AccountName" asp-route-mode="1" class="btn btn-info w-25" title="Show All">Show All</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
