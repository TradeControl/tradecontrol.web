                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Subject_CashAccount.SortCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Subject_CashAccount.AccountNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Subject_CashAccount.CurrentBalance)
                </th>
            }
            else
            {
                <th>
                    @Html.DisplayNameFor(model => model.Subject_CashAccount.CurrentBalance)
                </th>
            }
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Subject_CashAccount.SubjectName)
            </td>

            @if (Detection.Device.Type != Wangkanai.Detection.Models.Device.Mobile)
            {
                <td>
                    @Html.DisplayFor(model => model.Subject_CashAccount.AccountType)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Subject_CashAccount.SubjectType)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Subject_CashAccount.SortCode)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Subject_CashAccount.AccountNumber)
                </td>
                <td>
