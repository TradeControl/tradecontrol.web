@model TradeControl.Web.Pages.Cash.CategoryTree.CashCodeDetailsVm
@{
    var isEmbedded = string.Equals(Context.Request.Query["embed"], "1", StringComparison.Ordinal);
    var key = $"code:{Model.CashCode}";
    var categoryCode = Model.CategoryCode;
    var parentKey = Context.Request.Query["parentKey"].ToString();
}
<div id="cashCodeDetails"
     class="card shadow-sm mb-3"
     data-node-type="code"
     data-key="@key"
     data-parent-key="@(string.IsNullOrWhiteSpace(parentKey) ? categoryCode : parentKey)"
     data-enabled="@(Model.IsEnabled ? "1" : "0")"
     data-category-enabled="@(Model.IsCategoryEnabled ? "1" : "0")">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h5 class="card-title mb-1">@Model.CashDescription</h5>
                <div class="text-muted small">@Model.CashCode</div>
            </div>
            <span class="badge @(Model.IsEnabled ? "bg-success" : "bg-secondary")">
                @(Model.IsEnabled ? "Enabled" : "Disabled")
            </span>
        </div>

        <div class="mt-2 text-muted small">
            <div class="text-muted">Namespace</div>
            <div class="font-monospace">@Model.Namespace</div>
        </div>

        <div class="mt-3 row g-2 small">
            <div class="col-6">
                <div class="text-muted">Category</div>
                <div>@Model.Category (@Model.CategoryCode)</div>
            </div>
            <div class="col-6">
                <div class="text-muted">Polarity</div>
                <div>@Model.CashPolarity</div>
            </div>
            <div class="col-6">
                <div class="text-muted">Cash Type</div>
                <div>@Model.CashType</div>
            </div>
            <div class="col-6">
                <div class="text-muted">Category State</div>
                <div>@(Model.IsCategoryEnabled ? "Enabled" : "Disabled")</div>
            </div>
            <div class="col-6">
                <div class="text-muted">Tax Code</div>
                <div>@Model.TaxCode</div>
            </div>
        </div>

        @if (User.IsInRole(TradeControl.Web.Authorization.Constants.AdministratorsRole))
        {
            <div class="mt-3 d-flex flex-wrap gap-2">
                <button type="button" class="btn btn-sm btn-outline-primary" data-action="edit">Edit</button>
                <button type="button" class="btn btn-sm btn-outline-dark" data-action="toggleEnabled">
                    @(Model.IsEnabled ? "Disable" : "Enable")
                </button>
                <button type="button" class="btn btn-sm btn-outline-danger" data-action="delete">Delete</button>
                <button type="button" class="btn btn-sm btn-outline-success" data-action="createCashCode">New Cash Code</button>
                @* NOTE: Removed Add Cash Code (attach existing) â€“ not valid from a cash code leaf *@
                @if (!isEmbedded)
                {
                    <button type="button" class="btn btn-sm btn-secondary" data-action="cancel">Cancel</button>
                }
            </div>
        }
        else if (!isEmbedded)
        {
            <div class="mt-3 d-flex flex-wrap gap-2">
                <button type="button" class="btn btn-sm btn-secondary" data-action="cancel">Back</button>
            </div>
        }
    </div>
</div>
