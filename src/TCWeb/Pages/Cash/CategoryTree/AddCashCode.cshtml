@page
@model TradeControl.Web.Pages.Cash.CategoryTree.AddCashCodeModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    Layout = null;
    var isEmbedded = (Request.Query["embed"] == "1")
        || (Request.HasFormContentType && Request.Form["embed"] == "1");
    var isListEmpty = Model.CodeList?.Count == 0;
}

@if (Model.OperationSucceeded && isEmbedded)
{
    <div id="addExistingCashCodeResult"
         data-key="@Model.Code"
         data-parent="@Model.ParentKey"></div>
}
else
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Add Cash Code</h5>

            @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
            {
                <div class="alert alert-danger py-1 px-2 mb-2 small">@Model.ErrorMessage</div>
            }

            <form method="post"
                  asp-page="./AddCashCode"
                  asp-route-parentKey="@Model.ParentKey"
                  asp-route-embed="1"
                  data-parent="@Model.ParentKey"
                  data-action="AddExistingCashCode">
                @Html.AntiForgeryToken()
                <input type="hidden" name="embed" value="1" />
                <input type="hidden" name="ParentKey" value="@Model.ParentKey" />
                <input type="hidden" name="ReturnKey" value="@Model.ParentKey" />

                <div class="mb-3">
                    <label class="form-label">Target Category</label>
                    <input class="form-control" value="@Model.ParentKey" disabled />
                    <div class="form-text">Attach or move an existing code under this category.</div>
                </div>

                <div class="mb-3">
                    <label asp-for="Code" class="form-label">Select Cash Code</label>
                    <select asp-for="Code" asp-items="Model.CodeList" class="form-select"></select>
                    <span asp-validation-for="Code" class="text-danger small"></span>
                    <div class="form-text">Only enabled codes not already under this category are listed.</div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary" @(isListEmpty ? "disabled" : "")>Add</button>
                    <a href="#" class="btn btn-secondary" data-embedded-cancel
                       onclick="try{ if(window.tcCancel){ window.tcCancel(); } }catch(e){} return false;">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/js/categoryTree.cancel.js" asp-append-version="true"></script>
    <script>
        // Match AddCategory: ensure embedded submit interception is active
        try {
            if (window.tcTree && typeof window.tcTree.bindEmbeddedFormSubmit === "function") {
                window.tcTree.bindEmbeddedFormSubmit();
            }
        } catch (e) { }

        // Guard against any accidental auto-submit on select change (some browsers/plugins)
        (function(){
            var form = document.querySelector('form[data-action="AddExistingCashCode"]');
            if (!form) return;
            var sel = form.querySelector('select[name="Code"]');
            if (!sel) return;
            sel.addEventListener('keydown', function(ev){ ev.stopPropagation(); }, true);
            sel.addEventListener('change', function(ev){ ev.stopPropagation(); }, true);
        })();
    </script>
}
