@page
@model TradeControl.Web.Pages.Cash.CategoryTree.AddCategoryModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    var isEmbedded = (Request.Query["embed"] == "1")
        || (Request.HasFormContentType && Request.Form["embed"] == "1");
    Layout = isEmbedded ? null : "_Layout";
    var isCategoryListEmpty = Model.CategoryList?.Count == 0;
}

@if (Model.OperationSucceeded && isEmbedded)
{
    <div id="addExistingCategoryResult"
         data-key="@Model.ChildKey"
         data-parent="@Model.ParentKey"
         data-name="@Model.ChildName"
         data-polarity="@Model.ChildPolarity"
         data-categorytype="@( (short)TradeControl.Web.Data.NodeEnum.CategoryType.CashTotal )"
         data-isenabled="@(Model.ChildIsEnabled ? "1" : "0")"></div>
}
else
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Add Category</h5>

            @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
            {
                <div class="alert alert-danger py-1 px-2 mb-2 small">@Model.ErrorMessage</div>
            }

            <form method="post"
                  asp-page="./AddCategory"
                  asp-route-parentKey="@Model.ParentKey"
                  asp-route-embed="@(isEmbedded ? "1" : null)"
                  data-parent="@Model.ParentKey"
                  data-action="AddExistingCategory">
                @Html.AntiForgeryToken()
                @if (isEmbedded)
                {
                    <input type="hidden" name="embed" value="1" />
                }
                <input type="hidden" name="ParentKey" value="@Model.ParentKey" />
                <input type="hidden" name="ReturnKey" value="@Model.ParentKey" />

                <div class="mb-3">
                    <label class="form-label">Parent Total</label>
                    <input class="form-control" value="@Model.ParentKey" disabled />
                    <div class="form-text">Attach an existing Total under this parent.</div>
                </div>

                <div class="mb-3">
                    <label asp-for="ChildKey" class="form-label">Select Total</label>
                    <select asp-for="ChildKey" asp-items="Model.CategoryList" class="form-select"></select>
                    <span asp-validation-for="ChildKey" class="text-danger small"></span>
                    <div class="form-text">
                        Only enabled Total-type categories not already attached to this parent are listed.
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary" @(isCategoryListEmpty ? "disabled" : "")>Add</button>
                    <a href="#" class="btn btn-secondary" data-embedded-cancel
                       onclick="try{ if(window.tcCancel){ window.tcCancel(); } }catch(e){} return false;">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/js/categoryTree.cancel.js" asp-append-version="true"></script>
    <script>
        try { if (window.tcTree?.bindEmbeddedFormSubmit) { window.tcTree.bindEmbeddedFormSubmit(); } } catch(e){}
    </script>
}
