@model TradeControl.Web.Pages.Cash.CategoryTree.CategoryDetailsVm
@{
    string badgeClass = Model.IsEnabled ? "badge bg-success" : "badge bg-secondary";
}
<div class="card shadow-sm mb-3">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h5 class="card-title mb-1">
                    @Model.Category
                    @if (Model.ShowWarning)
                    {
                        <span class="ms-2 text-warning" title="This category has additional parents outside the primary hierarchy.">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                        </span>
                    }
                    @if (Model.IsContextInPrimary && !string.IsNullOrWhiteSpace(Model.PrimaryKind))
                    {
                        <span class="badge bg-info ms-2" title="This path is on the @Model.PrimaryKind primary hierarchy.">
                            @Model.PrimaryKind
                        </span>
                    }
                </h5>
                <div class="text-muted small">@Model.CategoryCode</div>
            </div>
            <span class="@badgeClass">@(Model.IsEnabled ? "Enabled" : "Disabled")</span>
        </div>

        <div class="mt-2 text-muted small">
            <div class="text-muted">Namespace</div>
            <div class="font-monospace">@Model.Namespace</div>
        </div>

        <div class="mt-3 row g-2 small">
            <div class="col-6">
                <div class="text-muted">Type</div>
                <div>@Model.CategoryType</div>
            </div>
            <div class="col-6">
                <div class="text-muted">Cash Type</div>
                <div>@Model.CashType</div>
            </div>
            <div class="col-6">
                <div class="text-muted">Polarity</div>
                <div>@Model.CashPolarity</div>
            </div>
            <div class="col-6">
                <div class="text-muted">Display Order</div>
                <div>@Model.DisplayOrder</div>
            </div>
        </div>

        <hr />
        <div class="d-flex gap-3">
            <div>
                <div class="text-muted small">Child Totals</div>
                <div class="fw-semibold">@Model.ChildTotalsCount</div>
            </div>
            <div>
                <div class="text-muted small">Codes</div>
                <div class="fw-semibold">@Model.CodesCount</div>
            </div>
            <div>
                <div class="text-muted small">Parents</div>
                <div class="fw-semibold">@Model.ParentCount</div>
            </div>
        </div>

        @if (User.IsInRole(TradeControl.Web.Authorization.Constants.AdministratorsRole))
        {
            <div class="mt-3 d-flex flex-wrap gap-2">
                <button type="button" class="btn btn-sm btn-outline-primary" data-action="edit">Edit</button>
                <button type="button" class="btn btn-sm btn-outline-secondary" data-action="addExistingCategory">Add Category</button>
                <button type="button" class="btn btn-sm btn-outline-secondary" data-action="addExistingCashCode">Add Cash Code</button>
                <button type="button" class="btn btn-sm btn-outline-warning" data-action="move">Move</button>
                <button type="button" class="btn btn-sm btn-outline-dark" data-action="toggleEnabled">Enable/Disable</button>
                <button type="button" class="btn btn-sm btn-outline-danger" data-action="delete">Delete</button>

                @* Only allow root assignment on true roots (no parents). Hide already-assigned roots *@
                @if (Model.IsRootNode)
                {
                    <div class="vr mx-1"></div>

                    @if (!Model.IsProfitRoot)
                    {
                        <button type="button" class="btn btn-sm btn-outline-info" data-action="setProfitRoot" title="Assign this category as the Profit primary root">Set Profit Root</button>
                    }
                    @if (!Model.IsVatRoot)
                    {
                        <button type="button" class="btn btn-sm btn-outline-info" data-action="setVatRoot" title="Assign this category as the VAT primary root">Set VAT Root</button>
                    }
                }
            </div>
        }
    </div>
</div>
