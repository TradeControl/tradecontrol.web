@model TradeControl.Web.Pages.Cash.CategoryTree.CategoryDetailsVm
@{
    var isEmbedded = string.Equals(Context.Request.Query["embed"], "1", StringComparison.Ordinal);
    var key = Model.CategoryCode;
    var parentKey = Context.Request.Query["parentKey"].ToString();
    var isTotal = Model.CategoryType?.Contains("Total", StringComparison.OrdinalIgnoreCase) ?? false;
    var isCashCodeCategory = Model.CategoryType?.Contains("Cash Code", StringComparison.OrdinalIgnoreCase) ?? false;

    // Tree root anchor constant
    const string RootKey = TradeControl.Web.Pages.Cash.CategoryTree.CategoryTreeModel.RootNodeKey;

    // Root-level child if either reported as root node (ParentCount == 0) or parentKey == __ROOT__
    var isRootLevelChild = Model.IsRootNode || parentKey == RootKey;

    // Glyph logic:
    //  - Profit Root: solid icon
    //  - VAT Root: solid percent
    //  - Profit hierarchy (non-root): outline graph
    //  - VAT hierarchy (non-root): outline percent
    var primaryKind = Model.PrimaryKind; // "Profit" | "VAT" | ""
}
<div id="categoryDetails"
     class="card shadow-sm mb-3"
     data-node-type="category"
     data-key="@key"
     data-parent-key="@(string.IsNullOrWhiteSpace(parentKey) ? "" : parentKey)"
     data-total="@(isTotal ? "1" : "0")"
     data-cashcodecat="@(isCashCodeCategory ? "1" : "0")"
     data-enabled="@(Model.IsEnabled ? "1" : "0")">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h5 class="card-title mb-1">
                    @Model.Category
                    @* Hierarchy glyphs using flags *@
                    @if (Model.IsProfitRoot)
                    {
                        <span class="ms-2 text-info" title="Profit Root"><i class="bi bi-graph-up-arrow"></i></span>
                    }
                    else if (Model.IsVatRoot)
                    {
                        <span class="ms-2 text-warning" title="VAT Root"><i class="bi bi-percent"></i></span>
                    }
                    else if (string.Equals(primaryKind, "Profit", System.StringComparison.OrdinalIgnoreCase))
                    {
                        <span class="ms-2 text-info" title="Profit Hierarchy"><i class="bi bi-graph-up"></i></span>
                    }
                    else if (string.Equals(primaryKind, "VAT", System.StringComparison.OrdinalIgnoreCase))
                    {
                        <span class="ms-2 text-warning" title="VAT Hierarchy"><i class="bi bi-percent"></i></span>
                    }
                </h5>
                <div class="text-muted small">@Model.CategoryCode</div>
            </div>
            <span class="badge @(Model.IsEnabled ? "bg-success" : "bg-secondary")">
                @(Model.IsEnabled ? "Enabled" : "Disabled")
            </span>
        </div>

        <div class="mt-2 small">
            <div class="text-muted">Category Type</div>
            <div>@Model.CategoryType</div>
        </div>
        <div class="mt-2 small row g-2">
            <div class="col-6">
                <div class="text-muted">Cash Type</div>
                <div>@Model.CashType</div>
            </div>
            <div class="col-6">
                <div class="text-muted">Polarity</div>
                <div>@Model.CashPolarity</div>
            </div>
            <div class="col-6">
                <div class="text-muted">Display Order</div>
                <div>@Model.DisplayOrder</div>
            </div>
            <div class="col-6">
                <div class="text-muted">Child Totals</div>
                <div>@Model.ChildTotalsCount</div>
            </div>
            <div class="col-6">
                <div class="text-muted">Codes</div>
                <div>@Model.CodesCount</div>
            </div>
            <div class="col-6">
                <div class="text-muted">Parent Totals</div>
                <div>@Model.ParentCount</div>
            </div>
        </div>

        @if (User.IsInRole(TradeControl.Web.Authorization.Constants.AdministratorsRole))
        {
            <div class="mt-3 d-flex flex-wrap gap-2">
                <button type="button" class="btn btn-sm btn-outline-primary" data-action="edit">Edit</button>
                <button type="button" class="btn btn-sm btn-outline-dark" data-action="toggleEnabled">
                    @(Model.IsEnabled ? "Disable" : "Enable")
                </button>
                <button type="button" class="btn btn-sm btn-outline-danger" data-action="delete">Delete</button>

                @if (isTotal)
                {
                    <button type="button" class="btn btn-sm btn-outline-success" data-action="addExistingCategory">Add Category</button>
                    <button type="button" class="btn btn-sm btn-outline-success" data-action="createTotal">New Total</button>
                    <button type="button" class="btn btn-sm btn-outline-success" data-action="createCategory">New Category</button>
                }
                @if (isCashCodeCategory)
                {
                    <button type="button" class="btn btn-sm btn-outline-success" data-action="addExistingCashCode">Add Cash Code</button>
                    <button type="button" class="btn btn-sm btn-outline-success" data-action="createCashCode">New Cash Code</button>
                }

                @* Show Profit/VAT root assignment only for root-level Totals and when not already that root *@
                @if (isTotal && isRootLevelChild)
                {
                    @if (!Model.IsProfitRoot)
                    {
                        <button type="button" class="btn btn-sm btn-outline-secondary" data-action="setProfitRoot">
                            Set Profit Root
                        </button>
                    }
                    @if (!Model.IsVatRoot)
                    {
                        <button type="button" class="btn btn-sm btn-outline-secondary" data-action="setVatRoot">
                            Set VAT Root
                        </button>
                    }
                }

                @if (!isEmbedded)
                {
                    <button type="button"
                            class="btn btn-sm btn-secondary"
                            data-action="cancel"
                            data-return-key="@key"
                            data-return-parent="@parentKey">
                        Cancel
                    </button>
                }
            </div>
        }
        else if (!isEmbedded)
        {
            <div class="mt-3 d-flex flex-wrap gap-2">
                <button type="button" class="btn btn-sm btn-secondary" data-action="cancel">Back</button>
            </div>
        }
    </div>
</div>
