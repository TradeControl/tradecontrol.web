@model TradeControl.Web.Pages.Cash.CategoryTree.CategoryDetailsVm
@{
    string badgeClass = Model.IsEnabled ? "badge bg-success" : "badge bg-secondary";
}
<div class="card shadow-sm mb-3">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h5 class="card-title mb-1">@Model.Category</h5>
                <div class="text-muted small">@Model.CategoryCode</div>
            </div>
            <span class="@badgeClass">@(Model.IsEnabled ? "Enabled" : "Disabled")</span>
        </div>

        <div class="mt-3 row g-2 small">
            <div class="col-6">
                <div class="text-muted">Type</div>
                <div>@Model.CategoryType</div>
            </div>
            <div class="col-6">
                <div class="text-muted">Cash Type</div>
                <div>@Model.CashType</div>
            </div>
            <div class="col-6">
                <div class="text-muted">Polarity</div>
                <div>@Model.CashPolarity</div>
            </div>
            <div class="col-6">
                <div class="text-muted">Display Order</div>
                <div>@Model.DisplayOrder</div>
            </div>
        </div>

        <hr />
        <div class="d-flex gap-3">
            <div>
                <div class="text-muted small">Child Totals</div>
                <div class="fw-semibold">@Model.ChildTotalsCount</div>
            </div>
            <div>
                <div class="text-muted small">Codes</div>
                <div class="fw-semibold">@Model.CodesCount</div>
            </div>
        </div>
    </div>
</div>