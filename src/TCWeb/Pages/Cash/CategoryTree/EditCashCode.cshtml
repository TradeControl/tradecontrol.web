@page
@model TradeControl.Web.Pages.Cash.CategoryTree.EditCashCodeModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    var isEmbedded = string.Equals(Request.Query["embed"], "1", System.StringComparison.OrdinalIgnoreCase);
    Layout = isEmbedded ? null : "_Layout";
}

@if (Model.OperationSucceeded && isEmbedded)
{
    <div id="editCashCodeResult"
         data-key="code:@Model.CashCode"
         data-parent="@Model.CategoryCode"
         data-name="@Model.CashDescription"
         data-isenabled="@(Model.IsEnabled ? "1" : "0")"></div>
}
else
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Edit Cash Code</h5>
            <form method="post"
                  asp-page="./EditCashCode"
                  asp-route-key="code:@Model.CashCode"
                  asp-route-embed="@(isEmbedded ? "1" : null)">
                @Html.AntiForgeryToken()
                @if (isEmbedded)
                {
                    <input type="hidden" name="embed" value="1" />
                }

                <div asp-validation-summary="All" class="text-danger small mb-2"></div>

                <div class="mb-3">
                    <label asp-for="CashCode" class="form-label">Cash Code</label>
                    <input asp-for="CashCode" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="CashDescription" class="form-label">Description</label>
                    <input asp-for="CashDescription" class="form-control" maxlength="100" />
                    <span asp-validation-for="CashDescription" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TaxCode" class="form-label">Tax Code</label>
                    <select asp-for="TaxCode" class="form-select" asp-items="Model.TaxCodes"></select>
                    <span asp-validation-for="TaxCode" class="text-danger small"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsEnabled" class="form-check-input" type="checkbox" />
                    <label asp-for="IsEnabled" class="form-check-label">Enabled</label>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                    @* Show cancel even when embedded (desktop RHS needs a Cancel) *@
                    <a href="#" class="btn btn-secondary" data-embedded-cancel data-action="cancel" onclick="return false;">Cancel</a>
                </div>
            </form>
        </div>
    </div>
}
