@page
@model TradeControl.Web.Pages.Cash.CategoryTree.EditCashCodeModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    Layout = null;
    var isEmbedded = (Request.Query["embed"] == "1") || (Request.HasFormContentType && Request.Form["embed"] == "1");
}

@if (Model.OperationSucceeded && isEmbedded)
{
    <div id="editCashCodeResult"
         data-key="code:@Model.CashCode"
         data-parent="@Model.ParentKey"
         data-name="@Model.CashDescription"
         data-isenabled="@(Model.IsEnabled ? "1" : "0")"
         data-cashtype="@Model.ParentCashType"></div>
}
else
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Edit Cash Code</h5>

            @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
            {
                <div class="alert alert-danger py-1 px-2 mb-2 small">@Model.ErrorMessage</div>
            }

            <form method="post"
                  asp-page="./EditCashCode"
                  asp-route-key="@Model.CashCode"
                  asp-route-embed="1">
                @Html.AntiForgeryToken()
                <input type="hidden" name="embed" value="1" />
                <input type="hidden" name="Key" value="@Model.CashCode" />
                <input type="hidden" name="ParentKey" value="@Model.ParentKey" />

                <div class="mb-3">
                    <label class="form-label">Cash Code</label>
                    <input class="form-control" value="@Model.CashCode" disabled />
                </div>

                <div class="mb-3">
                    <label asp-for="CashDescription" class="form-label">Description</label>
                    <input asp-for="CashDescription" class="form-control" maxlength="50" />
                    <span asp-validation-for="CashDescription" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TaxDescription" class="form-label">Tax Code</label>
                    <select asp-for="TaxDescription" asp-items="Model.TaxDescriptions" class="form-select"></select>
                    <span asp-validation-for="TaxDescription" class="text-danger small"></span>
                </div>
                <input type="hidden" asp-for="TaxCode" />

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="IsEnabled" />
                    <label class="form-check-label" asp-for="IsEnabled">Enabled</label>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="#" class="btn btn-secondary" data-embedded-cancel
                       onclick="try { if (window.tcCancel) { window.tcCancel(); } } catch (_) { } return false;">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/js/categoryTree.cancel.js" asp-append-version="true"></script>
    <script>
        try {
            if (window.tcTree && typeof window.tcTree.bindEmbeddedFormSubmit === "function") {
                window.tcTree.bindEmbeddedFormSubmit();
            }
        } catch (_) { }
    </script>
}
