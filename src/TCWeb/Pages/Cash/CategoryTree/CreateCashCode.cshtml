@page
@model TradeControl.Web.Pages.Cash.CategoryTree.CreateCashCodeModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    Layout = null;
    var isEmbedded = (Request.Query["embed"] == "1") || (Request.HasFormContentType && Request.Form["embed"] == "1");
}

@if (Model.OperationSucceeded && isEmbedded)
{
    <div id="createCashCodeResult"
         data-key="@Model.NewKey"
         data-parent="@Model.NewParentKey"
         data-category="@Model.CategoryCode"
         data-name="@Model.NewName"
         data-polarity="@Model.NewPolarity"
         data-categorytype="@Model.NewCategoryType"
         data-isenabled="@Model.NewIsEnabled"
         data-cashcode="@Model.NewCashCode"
         data-node='@Html.Raw(Model.NewNodeJson)'></div>
}
else
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Create Cash Code</h5>

            <!-- validation summary so embedded responses show errors -->
            <form method="post" asp-page="./CreateCashCode" asp-route-key="@Model.CategoryCode" asp-route-embed="1">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger mb-2"></div>

                <input asp-for="CategoryCode" type="hidden" />

                <div class="mb-3">
                    <label asp-for="CashCode" class="form-label">Cash Code</label>
                    <input asp-for="CashCode" class="form-control" maxlength="50" />
                    <span asp-validation-for="CashCode" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CashDescription" class="form-label">Description</label>
                    <input asp-for="CashDescription" class="form-control" maxlength="100" />
                    <span asp-validation-for="CashDescription" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TaxCode" class="form-label">Tax Code</label>
                    <select asp-for="TaxCode" class="form-select" asp-items="Model.TaxCodes"></select>
                    <span asp-validation-for="TaxCode" class="text-danger small"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsEnabled" class="form-check-input" type="checkbox" />
                    <label asp-for="IsEnabled" class="form-check-label">Enabled</label>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Create</button>

                    @* Cancel: when embedded, reload the parent details pane for the category (fallback: clear pane).
                       When not embedded, navigate back to the index page. *@
                    <a class="btn btn-secondary" href="javascript:void(0)"
                       onclick="(function(){
                            var p = document.getElementById('detailsPane');
                            if (p) {
                                var cat = '@Model.CategoryCode';
                                // Fetch parent details and select the parent category in the tree to avoid selecting a code
                                var url = '/Cash/CategoryTree/Details?key=' + encodeURIComponent(cat || '') + '&embed=1';
                                fetch(url, { credentials: 'same-origin' })
                                    .then(function (r) { return r.text(); })
                                    .then(function (html) {
                                        p.innerHTML = html;
                                        try {
                                            if (window.$ && window.$.ui && window.$.ui.fancytree) {
                                                var tree = $.ui.fancytree.getTree('#categoryTree');
                                                if (tree && cat) {
                                                    var node = tree.getNodeByKey(cat);
                                                    if (node) {
                                                        try { node.makeVisible(); } catch (e) { }
                                                        try { node.setActive(true); } catch (e) { }
                                                    }
                                                }
                                            }
                                        } catch (e) { /* swallow */ }
                                    })
                                    .catch(function () { p.innerHTML = ''; });
                            } else {
                                window.location.href='@Url.Page("/Cash/CategoryTree/Index")';
                            }
                       })()">Cancel</a>
                </div>
            </form>
        </div>
    </div>
}
