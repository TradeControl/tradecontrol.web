@page
@model TradeControl.Web.Pages.Cash.CategoryTree.CreateCashCodeModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    var isEmbedded = (Request.Query["embed"] == "1") || (Request.HasFormContentType && Request.Form["embed"] == "1");
    Layout = isEmbedded ? null : "_Layout";
}

@if (Model.OperationSucceeded && isEmbedded)
{
    <div id="tcEmbedResult"
         data-select="code:@Model.NewCashCode"
         data-expand="@Model.CategoryCode"
         data-node='@Html.Raw(Model.NewNodeJson)'></div>
}
else
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Create Cash Code</h5>

            <form method="post"
                  asp-page="./CreateCashCode"
                  asp-route-key="@Model.CategoryCode"
                  asp-route-embed="@(isEmbedded ? "1" : null)">
                @Html.AntiForgeryToken()
                @if (isEmbedded)
                {
                    <input type="hidden" name="embed" value="1" />
                }

                <div asp-validation-summary="All" class="text-danger mb-2 small"></div>

                <input asp-for="CategoryCode" type="hidden" />

                <div class="mb-3">
                    <label asp-for="CashCode" class="form-label">Cash Code</label>
                    <input asp-for="CashCode" class="form-control" maxlength="50" />
                    <span asp-validation-for="CashCode" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CashDescription" class="form-label">Description</label>
                    <input asp-for="CashDescription" class="form-control" maxlength="100" />
                    <span asp-validation-for="CashDescription" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TaxCode" class="form-label">Tax Code</label>
                    <select asp-for="TaxCode" class="form-select" asp-items="Model.TaxCodes"></select>
                    <span asp-validation-for="TaxCode" class="text-danger small"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsEnabled" class="form-check-input" type="checkbox" />
                    <label asp-for="IsEnabled" class="form-check-label">Enabled</label>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a class="btn btn-secondary" href="#" data-embedded-cancel
                       onclick="try{ if(window.tcCancel){ window.tcCancel(); } }catch(e){} return false;">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/js/categoryTree.cancel.js" asp-append-version="true"></script>
    <script>
        try
        {
            if (window.tcTree && window.tcTree.bindEmbeddedFormSubmit)
            {
                window.tcTree.bindEmbeddedFormSubmit();
            }
        }
        catch (_) { }
    </script>
}
