@page
@model TradeControl.Web.Pages.Cash.CategoryTree.EditTotalModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    var embed = Request.Query["embed"] == "1";
    if (!embed && Request.HasFormContentType && Request.Form["embed"] == "1")
    {
        embed = true;
    }

    Layout = embed ? null : "_Layout";

    var returnKey = Request.Query["returnKey"].ToString();
    if (string.IsNullOrWhiteSpace(returnKey))
    {
        returnKey = Model.CategoryCode;
    }
}

@if (Model.OperationSucceeded)
{
    if (embed)
    {
        <div id="editTotalResult"
             data-key="@Model.CategoryCode"
             data-parent="@Model.ParentKey"
             data-name="@Model.Category"
             data-isenabled="@(Model.IsEnabled ? "1" : "0")"
             data-returnkey="@returnKey"></div>
        <script src="~/js/categoryTree.cancel.js" asp-append-version="true"></script>
    }
    else
    {
        <div class="container py-3">
            <div class="alert alert-success mb-3">
                Total updated: @Model.Category (@Model.CategoryCode)
            </div>
            <a class="btn btn-primary"
               asp-page="./Index"
               asp-route-select="@returnKey"
               asp-route-expand="@Model.ParentKey">Back to Category Tree</a>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Edit Total</h5>

            @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
            {
                <div class="alert alert-danger py-1 px-2 mb-3 small">@Model.ErrorMessage</div>
            }

            <form method="post"
                  asp-page="./EditTotal"
                  asp-route-key="@Model.CategoryCode"
                  asp-route-returnKey="@returnKey"
                  asp-route-embed="@(embed ? "1" : null)">
                @Html.AntiForgeryToken()

                @if (embed)
                {
                    <input type="hidden" name="embed" value="1" />
                }

                <input type="hidden" name="CategoryCode" value="@Model.CategoryCode" />
                <input type="hidden" name="ParentKey" value="@Model.ParentKey" />
                <input type="hidden" name="ReturnKey" value="@returnKey" />

                <div class="mb-3">
                    <label class="form-label">Category Code</label>
                    <input class="form-control" value="@Model.CategoryCode" disabled />
                </div>

                <div class="mb-3">
                    <label asp-for="Category" class="form-label">Name</label>
                    <input asp-for="Category" class="form-control" maxlength="50" />
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsEnabled" type="checkbox" class="form-check-input" />
                    <label asp-for="IsEnabled" class="form-check-label">Enabled</label>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>

                    @if (embed)
                    {
                        <a href="#"
                           class="btn btn-secondary"
                           data-embedded-cancel
                           onclick="try{ if(window.tcCancel){ window.tcCancel(); } }catch(e){} return false;">Cancel</a>
                    }
                    else
                    {
                        <a class="btn btn-secondary"
                           asp-page="./Index"
                           asp-route-select="@returnKey"
                           asp-route-expand="@Model.ParentKey">Cancel</a>
                    }
                </div>
            </form>
        </div>
    </div>

    @if (embed)
    {
        <script src="~/js/categoryTree.cancel.js" asp-append-version="true"></script>
    }
}
