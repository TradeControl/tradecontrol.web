@page
@model TradeControl.Web.Pages.Cash.CategoryTree.EditCategoryModel
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    var embed = Request.Query["embed"] == "1" || (Request.HasFormContentType && Request.Form["embed"] == "1");
    Layout = embed ? null : "_Layout";
}
@if (Model.OperationSucceeded)
{
    if (embed)
    {
        <div id="editCategoryResult"
            data-key="@Model.CategoryCode"
            data-parent="@Model.ParentKey"
            data-name="@Model.Category"
            data-isenabled="@(Model.IsEnabled ? "1" : "0")"
            data-polarity="@Model.CashPolarityCode"
            data-cashtype="@Model.CashTypeCode">
        </div>
        <script src="~/js/categoryTree.cancel.js" asp-append-version="true"></script>
    }
    else
    {
        <div class="container py-3">
            <div class="alert alert-success mb-3"> Category updated: @Model.Category (@Model.CategoryCode)</div>
            <a class="btn btn-primary" asp-page="./Index" asp-route-select="@Model.CategoryCode" asp-route-expand="@Model.ParentKey">Back to Category Tree</a>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Edit Category</h5>
            @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
            {
                <div class="alert alert-danger py-1 px-2 mb-3 small">@Model.ErrorMessage</div>
            }

            <form method="post"
                  asp-page="./EditCategory"
                  asp-route-key="@Model.CategoryCode"
                  asp-route-embed="@(embed ? "1" : null)">
                @Html.AntiForgeryToken()

                @if (embed)
                {
                    <input type="hidden" name="embed" value="1" />
                }

                <input type="hidden" name="CategoryCode" value="@Model.CategoryCode" />
                <input type="hidden" name="ParentKey" value="@Model.ParentKey" />

                <div class="mb-3">
                    <label class="form-label">Category Code</label>
                    <input class="form-control" value="@Model.CategoryCode" disabled />
                </div>

                <div class="mb-3">
                    <label asp-for="Category" class="form-label">Name</label>
                    <input asp-for="Category" class="form-control" maxlength="50" />
                </div>

                <div class="mb-3">
                    <label asp-for="CashTypeCode" class="form-label">Cash Type</label>
                    <select asp-for="CashTypeCode" class="form-select" asp-items="Model.CashTypes"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="CashPolarityCode" class="form-label">Polarity</label>
                    <select asp-for="CashPolarityCode" class="form-select" asp-items="Model.CashPolarities"></select>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsEnabled" type="checkbox" class="form-check-input" />
                    <label asp-for="IsEnabled" class="form-check-label">Enabled</label>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>

                    @if (embed)
                    {
                        <a href="#"
                           class="btn btn-secondary"
                           data-embedded-cancel
                           onclick="try{ if(window.tcCancel){ window.tcCancel(); } }catch(e){} return false;">Cancel</a>
                    }
                    else
                    {
                        <a class="btn btn-secondary"
                           asp-page="./Index"
                           asp-route-select="@Model.CategoryCode"
                           asp-route-expand="@Model.ParentKey">Cancel</a>
                    }
                </div>
            </form>
        </div>
    </div>

    @if (embed)
    {
        <script src="~/js/categoryTree.cancel.js" asp-append-version="true"></script>
    }
}
