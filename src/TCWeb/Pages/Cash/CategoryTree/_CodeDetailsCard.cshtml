@model TradeControl.Web.Pages.Cash.CategoryTree.CodeDetailsVm
<div class="card shadow-sm mb-3">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h5 class="card-title mb-1">@Model.CashDescription</h5>
                <div class="text-muted small">@Model.CashCode</div>
            </div>
            <span class="badge @(Model.IsEnabled ? "bg-success" : "bg-secondary")">@(Model.IsEnabled ? "Enabled" : "Disabled")</span>
        </div>

        <div class="mt-2 text-muted small">
            <div class="text-muted">Namespace</div>
            <div class="font-monospace">@Model.Namespace</div>
        </div>

        <div class="mt-3 row g-2 small">
            <div class="col-6">
                <div class="text-muted">Category</div>
                <div>@Model.Category (@Model.CategoryCode)</div>
            </div>
            <div class="col-6">
                <div class="text-muted">Polarity</div>
                <div>@Model.CashPolarity</div>
            </div>
            <div class="col-6">
                <div class="text-muted">Cash Type</div>
                <div>@Model.CashType</div>
            </div>
            <div class="col-6">
                <div class="text-muted">Category State</div>
                <div>@(Model.IsCategoryEnabled ? "Enabled" : "Disabled")</div>
            </div>
            <div class="col-6">
                <div class="text-muted">Tax Code</div>
                <div>@Model.TaxCode</div>
            </div>
        </div>

        @if (User.IsInRole(TradeControl.Web.Authorization.Constants.AdministratorsRole))
        {
            <div class="mt-3 d-flex flex-wrap gap-2">
                <button type="button" class="btn btn-sm btn-outline-primary" data-action="edit">Edit</button>
                <button type="button" class="btn btn-sm btn-outline-dark" data-action="toggleEnabled">Enable/Disable</button>
                <button type="button" class="btn btn-sm btn-outline-danger" data-action="delete">Delete</button>
            </div>
        }
    </div>
</div>