@page
@inject Wangkanai.Detection.Services.IDetectionService Detection
@model TradeControl.Web.Pages.Cash.CategoryCode.IndexModel
@{ ViewData["Title"] = "Categories"; }
<h1>@ViewData["Title"]</h1>

@{
    if (string.IsNullOrEmpty(Model.ReturnUrl) && User.IsInRole(Constants.AdministratorsRole))
    {
        <p>
            <a asp-page="./Create" class="btn btn-outline-primary w-25" title="Create New">Create New</a>
        </p>
    }
}

<form class="mb-3" method="get">
    <div class="row g-2 align-items-center">
        <div class="col-auto">
            <select asp-for="CashType" asp-items="Model.CashTypes" class="form-control">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-auto">
            <label class="visually-hidden" for="SearchString">Description</label>
            <input type="text" asp-for="SearchString" id="SearchString" class="form-control" placeholder="Description" />
        </div>
        <div class="col-auto">
            <input type="submit" value="Filter" class="btn btn-primary" />
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cash_Categories[0].CategoryCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cash_Categories[0].Category)
            </th>

            @if (Detection.Device.Type != Wangkanai.Detection.Models.Device.Mobile)
            {
                <th>
                    @Html.DisplayNameFor(model => model.Cash_Categories[0].CashType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cash_Categories[0].CashPolarity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cash_Categories[0].DisplayOrder)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cash_Categories[0].IsEnabled)
                </th>
            }

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cash_Categories)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>

                @if (Detection.Device.Type != Wangkanai.Detection.Models.Device.Mobile)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.CashType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CashPolarity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayOrder)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsEnabled)
                    </td>
                }

                <td>
                    @{
                        if (!string.IsNullOrEmpty(Model.ReturnUrl))
                        {
                            <div class="action-buttons">
                                <a asp-page="@Model.ReturnUrl" asp-route-categoryCode="@item.CategoryCode" class="btn btn-info" title="Select this item">
                                    <i class="bi bi-check2-square"></i>
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="action-buttons">
                                <a asp-page="./Details" asp-route-categoryCode="@item.CategoryCode" class="btn btn-info" title="Details">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                                @if (User.IsInRole(Constants.AdministratorsRole))
                                {
                                    <a asp-page="./Edit" asp-route-categoryCode="@item.CategoryCode" class="btn btn-secondary" title="Edit this item">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-page="./Delete" asp-route-categoryCode="@item.CategoryCode" class="btn btn-danger" title="Delete this item">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }
                            </div>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
