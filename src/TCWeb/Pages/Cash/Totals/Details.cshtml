@page
@model TradeControl.Web.Pages.Cash.Totals.DetailsModel
@{ ViewData["Title"] = "Cash Total"; }
<h1>@ViewData["Title"]</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Cash_Total.Category)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cash_Total.CategoryCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cash_Total.CategoryCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cash_Total.CashType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cash_Total.CashType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cash_Total.DisplayOrder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cash_Total.DisplayOrder)
        </dd>
    </dl>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cash_Total.Category)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Child_Categories)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-page="./Index" class="btn btn-info">To List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
