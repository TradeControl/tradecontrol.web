@page
@model TradeControl.Web.Pages.Cash.PaymentEntry.IndexModel

@{ ViewData["Title"] = "Payment Entry"; }
<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="./Create" asp-route-cashSubjectCode="@Model.AccountCode" asp-route-mode="0" class="btn btn-outline-primary w-25">Pay Invoices</a>
    <a asp-page="./Create" asp-route-cashSubjectCode="@Model.AccountCode" asp-route-mode="1" class="btn btn-outline-primary w-25">Miscellaneous Payment</a>
    <a asp-page="/Cash/Statement/Index" asp-route-cashSubjectCode="@Model.AccountCode" asp-route-mode="0" class="btn btn-outline-info w-25">Statement</a>
</p>

<form class="mb-3">
    <div class="row align-items-center">
        <div class="col-auto">
        <select asp-for="AccountName" asp-items="Model.AccountNames" class="form-control"></select>
        </div>
        <div class="col-auto">
        <input type="submit" value="Filter" class="btn btn-primary" />
        </div>
    </div>
</form>
<table class="table  table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cash_PaymentsUnposted[0].PaidOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cash_PaymentsUnposted[0].SubjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cash_PaymentsUnposted[0].PaymentReference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cash_PaymentsUnposted[0].PaidInValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cash_PaymentsUnposted[0].PaidOutValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cash_PaymentsUnposted[0].CashDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cash_PaymentsUnposted[0].TaxDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cash_PaymentsUnposted)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PaidOn)
                </td>
                <td>
                    <a asp-page="/Subject/Enquiry/Index" asp-route-accountCode="@item.SubjectCode">
                        @Html.DisplayFor(modelItem => item.SubjectName)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentReference)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaidInValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaidOutValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CashDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaxDescription)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-paymentCode="@item.PaymentCode" class="btn btn-info"></a>
                    <a asp-page="./Edit" asp-route-paymentCode="@item.PaymentCode" class="btn btn-secondary"></a>
                    <a asp-page="./Delete" asp-route-paymentCode="@item.PaymentCode" class="btn btn-danger"></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<form method="post">
    <p>
        <input type="submit" value="Post" class="btn btn-primary" />
    </p>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}