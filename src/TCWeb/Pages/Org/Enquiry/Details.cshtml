<p>
    <a asp-page="./Index" asp-route-accountCode="@Model.Org_Account.AccountCode" class="btn btn-info"></a>
    <a asp-page="./Invoices" asp-route-accountCode="@Model.Org_Account.AccountCode" class="btn btn-warning"></a>
    <a asp-page="./Payments" asp-route-accountCode="@Model.Org_Account.AccountCode" class="btn btn-success"></a>
    <a asp-page="./Statement" asp-route-accountCode="@Model.Org_Account.AccountCode" class="btn btn-dark"></a>
</p>

<table class="table  table-striped">
    <thead>
        <tr>
            <th>
                Additional Addresses
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Org_Addresses)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
            </tr>
        }
    </tbody>
</table>

<table class="table  table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Org_Contacts[0].ContactName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Org_Contacts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactName)
                </td>
                <td>
                    <a asp-page="../Contact/Details" asp-route-accountCode="@item.AccountCode" asp-route-contactName="@item.ContactName" class="btn btn-info"></a>
                </td>
            </tr>
        }
    </tbody>
</table>


