@page
@model TradeControl.Web.Pages.Org.Enquiry.IndexModel

@{ ViewData["Title"] = "Organisation Enquiries"; }
<h1>@ViewData["Title"]</h1>

<form class="form-group" method="get">
    <p>
        <select asp-for="OrganisationType" asp-items="Model.OrganisationTypes"></select>
        Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table  table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Org_AccountLookup[0].AccountCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Org_AccountLookup[0].AccountName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Org_AccountLookup[0].OrganisationType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Org_AccountLookup[0].CashMode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Org_AccountLookup)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountCode)
                </td>
                <td>
                    <a asp-page="/Org/Update/Index" asp-route-accountCode="@item.AccountCode">
                        @Html.DisplayFor(modelItem => item.AccountName)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrganisationType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CashMode)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-accountCode="@item.AccountCode" class="btn btn-info"></a>
                    <a asp-page="./Invoices" asp-route-accountCode="@item.AccountCode" class="btn btn-warning"></a>
                    <a asp-page="./Payments" asp-route-accountCode="@item.AccountCode" class="btn btn-success"></a>
                    <a asp-page="./Statement" asp-route-accountCode="@item.AccountCode" class="btn btn-dark"></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
